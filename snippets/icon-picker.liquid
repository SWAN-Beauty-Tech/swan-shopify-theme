{% case icon %}
  {% when "info" %}
    <svg viewBox="0 0 24 24" fill="none" stroke="{{ color }}" stroke-width="2" width="{{ size }}" height="{{ size }}">
      <circle cx="12" cy="12" r="10"></circle>
      <line x1="12" y1="8" x2="12" y2="12"></line>
      <line x1="12" y1="16" x2="12" y2="16"></line>
    </svg>
  {% when "star" %}
    <svg viewBox="0 0 24 24" fill="none" stroke="{{ color }}" stroke-width="2" width="{{ size }}" height="{{ size }}">
      <polygon points="12 2 15 8.5 22 9 17 14 18.5 21 12 17.5 5.5 21 7 14 2 9 9 8.5 12 2"></polygon>
    </svg>
  {% when "check" %}
    <svg viewBox="0 0 24 24" fill="none" stroke="{{ color }}" stroke-width="2" width="{{ size }}" height="{{ size }}">
      <polyline points="20 6 9 17 4 12"></polyline>
    </svg>
  {% when "heart" %}
    <svg viewBox="0 0 24 24" fill="none" stroke="{{ color }}" stroke-width="2" width="{{ size }}" height="{{ size }}">
      <path d="M12 21s-8-6-8-11a5 5 0 0 1 10 0 5 5 0 0 1 10 0c0 5-8 11-8 11z"></path>
    </svg>
  {% when "arrow" %}
    <svg viewBox="0 0 24 24" fill="none" stroke="{{ color }}" stroke-width="2" width="{{ size }}" height="{{ size }}">
      <line x1="5" y1="12" x2="19" y2="12"></line>
      <polyline points="12 5 19 12 12 19"></polyline>
    </svg>
{% endcase %}
