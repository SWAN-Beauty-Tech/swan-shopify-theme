{% doc %}
  @prompt
    steps

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-steps-container-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-steps-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-steps-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-steps-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 16px 0;
    font-weight: 600;
  }

  .ai-steps-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
    line-height: 1.5;
  }

  .ai-steps-list-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: {{ block.settings.step_spacing }}px;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .ai-steps-item-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: {{ block.settings.content_spacing }}px;
    padding: {{ block.settings.step_padding }}px;
    background-color: {{ block.settings.step_background }};
    border-radius: {{ block.settings.border_radius }}px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
  }

  .ai-steps-number-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.number_size }}px;
    height: {{ block.settings.number_size }}px;
    background-color: {{ block.settings.number_background }};
    color: {{ block.settings.number_text_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: {{ block.settings.number_font_size }}px;
    margin-top: 4px;
  }

  .ai-steps-content-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .ai-steps-step-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.step_title_size }}px;
    color: {{ block.settings.step_title_color }};
    margin: 0 0 8px 0;
    font-weight: 600;
  }

  .ai-steps-step-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.step_text_size }}px;
    color: {{ block.settings.step_text_color }};
    margin: 0;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-steps-list-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.step_spacing | times: 0.8 }}px;
    }

    .ai-steps-item-{{ ai_gen_id }} {
      padding: {{ block.settings.step_padding | times: 0.8 }}px;
    }

    .ai-steps-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-steps-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-steps-wrapper-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.description != blank %}
      <div class="ai-steps-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-steps-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-steps-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    <ol class="ai-steps-list-{{ ai_gen_id }}">
      {% if block.settings.step_1_title != blank %}
        <li class="ai-steps-item-{{ ai_gen_id }}">
          <div class="ai-steps-number-{{ ai_gen_id }}">1</div>
          <div class="ai-steps-content-{{ ai_gen_id }}">
            <h3 class="ai-steps-step-title-{{ ai_gen_id }}">{{ block.settings.step_1_title }}</h3>
            {% if block.settings.step_1_text != blank %}
              <div class="ai-steps-step-text-{{ ai_gen_id }}">{{ block.settings.step_1_text }}</div>
            {% endif %}
          </div>
        </li>
      {% endif %}

      {% if block.settings.step_2_title != blank %}
        <li class="ai-steps-item-{{ ai_gen_id }}">
          <div class="ai-steps-number-{{ ai_gen_id }}">2</div>
          <div class="ai-steps-content-{{ ai_gen_id }}">
            <h3 class="ai-steps-step-title-{{ ai_gen_id }}">{{ block.settings.step_2_title }}</h3>
            {% if block.settings.step_2_text != blank %}
