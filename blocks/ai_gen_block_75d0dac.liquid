            {% if block.settings.step_3_text != blank %}
              <div class="ai-steps-step-text-{{ ai_gen_id }}">{{ block.settings.step_3_text }}</div>
            {% endif %}
          </div>
        </li>
      {% endif %}

      {% if block.settings.step_4_title != blank %}
        <li class="ai-steps-item-{{ ai_gen_id }}">
          <div class="ai-steps-number-{{ ai_gen_id }}">4</div>
          <div class="ai-steps-content-{{ ai_gen_id }}">
            <h3 class="ai-steps-step-title-{{ ai_gen_id }}">{{ block.settings.step_4_title }}</h3>
            {% if block.settings.step_4_text != blank %}
              <div class="ai-steps-step-text-{{ ai_gen_id }}">{{ block.settings.step_4_text }}</div>
            {% endif %}
          </div>
        </li>
      {% endif %}

      {% if block.settings.step_5_title != blank %}
        <li class="ai-steps-item-{{ ai_gen_id }}">
          <div class="ai-steps-number-{{ ai_gen_id }}">5</div>
