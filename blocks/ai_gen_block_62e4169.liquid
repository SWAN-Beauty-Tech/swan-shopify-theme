{% doc %}
  @prompt
    marquee logo list, with demo logos

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-marquee-logos-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
    position: relative;}

  .ai-marquee-logos-track-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.logo_spacing }}px;
    animation: ai-marquee-scroll-{{ ai_gen_id }} {{ block.settings.animation_speed }}s linear infinite;
    width: max-content;
  }

  .ai-marquee-logos-{{ ai_gen_id }}:hover .ai-marquee-logos-track-{{ ai_gen_id }} {
    animation-play-state: {% if block.settings.pause_on_hover %}paused{% else %}running{% endif %};
  }

  .ai-marquee-logo-item-{{ ai_gen_id }} {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    height: {{ block.settings.logo_height }}px;
    opacity: {{ block.settings.logo_opacity | divided_by: 100.0 }};
    transition: opacity 0.3s ease;
  }

  .ai-marquee-logo-item-{{ ai_gen_id }}:hover {
    opacity: 1;
  }

  .ai-marquee-logo-item-{{ ai_gen_id }} img {
    max-height: 100%;
    max-width: {{ block.settings.logo_max_width }}px;
    width: auto;
    height: auto;
    object-fit: contain;
    filter: {% if block.settings.grayscale_logos %}grayscale(100%){% else %}none{% endif %};
    transition: filter 0.3s ease;
  }

  .ai-marquee-logo-item-{{ ai_gen_id }}:hover img {
    filter: {% if block.settings.grayscale_logos %}grayscale(0%){% else %}none{% endif %};
  }

  .ai-marquee-demo-logo-{{ ai_gen_id }} {
    width: {{ block.settings.logo_max_width }}px;
    height: {{ block.settings.logo_height }}px;
    background-color: #f8f9fa;
    border: 2px solid #e9ecef;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 18px;
    color: #6c757d;
    filter: {% if block.settings.grayscale_logos %}grayscale(100%){% else %}none{% endif %};
    transition: all 0.3s ease;
  }

  .ai-marquee-logo-item-{{ ai_gen_id }}:hover .ai-marquee-demo-logo-{{ ai_gen_id }} {
    filter: {% if block.settings.grayscale_logos %}grayscale(0%){% else %}none{% endif %};
    border-color: #adb5bd;
    color: #495057;
  }

  .ai-marquee-demo-logo-1-{{ ai_gen_id }} { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none; }
  .ai-marquee-demo-logo-2-{{ ai_gen_id }} { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white; border: none; }
  .ai-marquee-demo-logo-3-{{ ai_gen_id }} { background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); color: white; border: none; }
  .ai-marquee-demo-logo-4-{{ ai_gen_id }} { background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); color: white; border: none; }
  .ai-marquee-demo-logo-5-{{ ai_gen_id }} { background: linear-gradient(135deg, #fa709a 0%, #fee140 100%); color: white; border: none; }
  .ai-marquee-demo-logo-6-{{ ai_gen_id }} { background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%); color: #495057; border: none; }
  .ai-marquee-demo-logo-7-{{ ai_gen_id }} { background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%); color: #495057; border: none; }
  .ai-marquee-demo-logo-8-{{ ai_gen_id }} { background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%); color: white; border: none; }

  @keyframes ai-marquee-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-marquee-logos-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_vertical | times: 0.7 }}px 0;
    }

    .ai-marquee-logo-item-{{ ai_gen_id }} {
      height: {{ block.settings.logo_height | times: 0.8 }}px;
    }

    .ai-marquee-logo-item-{{ ai_gen_id }} img {
      max-width: {{ block.settings.logo_max_width | times: 0.8 }}px;
    }

    .ai-marquee-demo-logo-{{ ai_gen_id }} {
      width: {{ block.settings.logo_max_width | times: 0.8 }}px;
      height: {{ block.settings.logo_height | times: 0.8 }}px;
      font-size: 14px;
    }
  }
{% endstyle %}

<div class="ai-marquee-logos-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-marquee-logos-track-{{ ai_gen_id }}">
    {% assign has_logos = false %}
    {% for i in (1..8) %}
      {% assign logo_key = 'logo_' | append: i %}
      {% if block.settings[logo_key] != blank %}
        {% assign has_logos = true %}
        <div class="ai-marquee-logo-item-{{ ai_gen_id }}">
          <img
            src="{{ block.settings[logo_key] | image_url: width: 400 }}"
            alt="{{ block.settings[logo_key].alt | escape }}"
            loading="lazy"
            width="{{ block.settings[logo_key].width }}"
            height="{{ block.settings[logo_key].height }}"
          >
        </div>
      {% endif %}
    {% endfor %}

    {% unless has_logos %}
      {% assign demo_logos = 'ACME,BRAND,CORP,DESIGN,ELITE,FORGE,GLOBAL,HOUSE' | split: ',' %}
      {% for logo_name in demo_logos %}
        <div class="ai-marquee-logo-item-{{ ai_gen_id }}">
          <div class="ai-marquee-demo-logo-{{ ai_gen_id }} ai-marquee-demo-logo-{{ forloop.index }}-{{ ai_gen_id }}">
            {{ logo_name }}
          </div>
        </div>
      {% endfor %}
    {% endunless %}

    {% if has_logos %}
      {% for i in (1..8) %}
        {% assign logo_key = 'logo_' | append: i %}
        {% if block.settings[logo_key] != blank %}
          <div class="ai-marquee-logo-item-{{ ai_gen_id }}">
            <img
              src="{{ block.settings[logo_key] | image_url: width: 400 }}"
              alt="{{ block.settings[logo_key].alt | escape }}"
              loading="lazy"
              width="{{ block.settings[logo_key].width }}"
              height="{{ block.settings[logo_key].height }}"
            >
          </div>
        {% endif %}
      {% endfor %}
    {% else %}
      {% for logo_name in demo_logos %}
        <div class="ai-marquee-logo-item-{{ ai_gen_id }}">
          <div class="ai-marquee-demo-logo-{{ ai_gen_id }} ai-marquee-demo-logo-{{ forloop.index }}-{{ ai_gen_id }}">
            {{ logo_name }}
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</div>

