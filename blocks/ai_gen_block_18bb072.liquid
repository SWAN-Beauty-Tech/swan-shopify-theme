{% doc %}
  @prompt
    A module with an image on the right side and Text on the left. The image should be a Carousel where I can switch to different pictures. It should be possible to insert up to 5 picturse., I would like to be able to adapt the size of the image
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-text-carousel-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 40px;
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-text-carousel__content-{{ ai_gen_id }} {
    flex: 1;
    padding-right: 20px;
  }

  .ai-text-carousel__heading-{{ ai_gen_id }} {
    margin: 0 0 16px;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-text-carousel__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
  }

  .ai-text-carousel__carousel-wrapper-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
    max-width: {{ block.settings.image_max_width }}px;
  }

  .ai-text-carousel__carousel-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-text-carousel__slides-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .ai-text-carousel__slide-{{ ai_gen_id }} {
    min-width: 100%;
    flex-shrink: 0;
  }

  .ai-text-carousel__slide-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-text-carousel__placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-text-carousel__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-text-carousel__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-text-carousel__controls-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 12px;
    margin-top: 20px;
  }

  .ai-text-carousel__button-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_icon_color }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }

  .ai-text-carousel__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-text-carousel__button-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-text-carousel__dots-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
  }

  .ai-text-carousel__dot-{{ ai_gen_id }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    border: none;
    cursor: pointer;
    padding: 0;
    transition: background-color 0.3s ease;
  }

  .ai-text-carousel__dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-text-carousel-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 30px;
    }

    .ai-text-carousel__content-{{ ai_gen_id }} {
      padding-right: 0;
    }

    .ai-text-carousel__carousel-wrapper-{{ ai_gen_id }} {
      max-width: 100%;
    }

    .ai-text-carousel__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-text-carousel__text-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.text_size }}px * 0.9);
    }
  }
{% endstyle %}

<image-carousel-{{ ai_gen_id }}
  class="ai-text-carousel-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-text-carousel__content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-text-carousel__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}
    {% if block.settings.text != blank %}
      <div class="ai-text-carousel__text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
    {% endif %}
  </div>

  <div class="ai-text-carousel__carousel-wrapper-{{ ai_gen_id }}">
    <div class="ai-text-carousel__carousel-{{ ai_gen_id }}">
      <div class="ai-text-carousel__slides-{{ ai_gen_id }}">
        {% liquid
          assign has_images = false
          for i in (1..5)
            assign image_key = 'image_' | append: i
            if block.settings[image_key] != blank
              assign has_images = true
              break
            endif
          endfor
        %}

        {% if has_images %}
          {% for i in (1..5) %}
            {% liquid
              assign image_key = 'image_' | append: i
              assign image = block.settings[image_key]
            %}
            {% if image != blank %}
              <div class="ai-text-carousel__slide-{{ ai_gen_id }}">
                <img
                  src="{{ image | image_url: width: 1200 }}"
                  alt="{{ image.alt | escape }}"
                  loading="lazy"
                  width="{{ image.width }}"
                  height="{{ image.height }}"
                >
              </div>
            {% endif %}
          {% endfor %}
        {% else %}
          <div class="ai-text-carousel__slide-{{ ai_gen_id }}">
            <div class="ai-text-carousel__placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
              <div class="ai-text-carousel__empty-state-{{ ai_gen_id }}">
                Next, add images to the carousel
              </div>
            </div>
          </div>
        {% endif %}
      </div>
    </div>

    {% if has_images %}
      <div class="ai-text-carousel__controls-{{ ai_gen_id }}">
        <button
          class="ai-text-carousel__button-{{ ai_gen_id }} ai-text-carousel__prev-{{ ai_gen_id }}"
          aria-label="Previous slide"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>

        <div class="ai-text-carousel__dots-{{ ai_gen_id }}">
          {% for i in (1..5) %}
            {% liquid
              assign image_key = 'image_' | append: i
              assign image = block.settings[image_key]
            %}
            {% if image != blank %}
              <button
                class="ai-text-carousel__dot-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
                aria-label="Go to slide {{ forloop.index }}"
                data-slide="{{ forloop.index | minus: 1 }}"
              ></button>
            {% endif %}
          {% endfor %}
        </div>

        <button
          class="ai-text-carousel__button-{{ ai_gen_id }} ai-text-carousel__next-{{ ai_gen_id }}"
          aria-label="Next slide"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
    {% endif %}
  </div>
</image-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class ImageCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.slidesContainer = this.querySelector('.ai-text-carousel__slides-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-text-carousel__slide-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-text-carousel__prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-text-carousel__next-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-text-carousel__dot-{{ ai_gen_id }}');
      }

      connectedCallback() {
        if (this.slides.length <= 1) return;

        this.prevButton.addEventListener('click', () => this.goToPrevSlide());
        this.nextButton.addEventListener('click', () => this.goToNextSlide());

        this.dots.forEach((dot) => {
          dot.addEventListener('click', (e) => {
            const slideIndex = parseInt(e.target.dataset.slide);
            this.goToSlide(slideIndex);
          });
        });

        this.updateButtons();
      }

      goToSlide(index) {
        this.currentSlide = index;
        const offset = -100 * this.currentSlide;
        this.slidesContainer.style.transform = `translateX(${offset}%)`;
        this.updateButtons();
        this.updateDots();
      }

      goToNextSlide() {
        if (this.currentSlide < this.slides.length - 1) {
          this.goToSlide(this.currentSlide + 1);
        }
      }

      goToPrevSlide() {
        if (this.currentSlide > 0) {
          this.goToSlide(this.currentSlide - 1);
        }
      }

      updateButtons() {
        this.prevButton.disabled = this.currentSlide === 0;
        this.nextButton.disabled = this.currentSlide === this.slides.length - 1;
      }

      updateDots() {
        this.dots.forEach((dot, index) => {
          if (index === this.currentSlide) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }
    }

    customElements.define('image-carousel-{{ ai_gen_id }}', ImageCarousel{{ ai_gen_id }});
  })();
</script>

