  .ai-skin-features-accordion-{{ ai_gen_id }} summary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24px 0;
    cursor: pointer;
    list-style: none;
    font-size: 20px;
    font-weight: 600;
    color: {{ block.settings.accordion_heading_color }};
  }

