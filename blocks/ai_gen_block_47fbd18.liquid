    height: 40px;
    border-radius: 50%;
    background-color: {{ block.settings.plus_bg_color }};
    color: {{ block.settings.plus_icon_color }};
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    cursor: default;
    pointer-events: none;
  }

  .ai-skin-features-card-bottom-{{ ai_gen_id }} {
    color: {{ block.settings.card_text_color }};
  }

  .ai-skin-features-card-headline-{{ ai_gen_id }} {
