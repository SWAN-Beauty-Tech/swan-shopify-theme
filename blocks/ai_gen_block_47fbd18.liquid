<script>
  (function() {
    class AiSkinFeatures{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupAccordion();
      }

      setupAccordion() {
        const details = this.querySelectorAll('details');
        
        details.forEach((targetDetail) => {
          targetDetail.addEventListener('click', () => {
            details.forEach((detail) => {
              if (detail !== targetDetail) {
                detail.removeAttribute('open');
              }
            });
          });
        });
      }
    }

    customElements.define('ai-skin-features-{{ ai_gen_id }}', AiSkinFeatures{{ ai_gen_id }});
  })();
</script>

