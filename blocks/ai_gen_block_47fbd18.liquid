  .ai-skin-features-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 48px;
  }

  .ai-skin-features-heading-{{ ai_gen_id }} {
    font-size: 36px;
    font-weight: 600;
    margin: 0 0 12px;
    color: {{ block.settings.heading_color }};
  }

  .ai-skin-features-subheading-{{ ai_gen_id }} {
    font-size: 18px;
    margin: 0;
    color: {{ block.settings.subheading_color }};
  }

  .ai-skin-features-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-bottom: 48px;
  }

  .ai-skin-features-card-{{ ai_gen_id }} {
    position: relative;
    aspect-ratio: 3 / 4;
    border-radius: {{ block.settings.card_radius }}px;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-skin-features-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-skin-features-card-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-skin-features-card-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-skin-features-card-overlay-{{ ai_gen_id }} {
    position: absolute;
    inset: 0;
    padding: 20px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .ai-skin-features-card-top-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .ai-skin-features-pill-{{ ai_gen_id }} {
