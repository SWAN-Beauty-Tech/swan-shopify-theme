{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}
{% assign video_class = 'ai-video-content-video-' | append: ai_gen_id %}

{% style %}
  .ai-video-content-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-video-content-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.gap }}px;
    align-items: center;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-video-content-text-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.text_gap }}px;
  }

  .ai-video-content-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_size }}px;
    font-weight: 600;
    color: {{ block.settings.headline_color }};
    margin: 0;
    line-height: 1.2;
  }

  .ai-video-content-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.6;
  }

  .ai-video-content-video-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.video_border_radius }}px;
    background-color: transparent;
  }

  .ai-video-content-video-wrapper-{{ ai_gen_id }} video,
  .ai-video-content-video-wrapper-{{ ai_gen_id }} iframe {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-video-content-placeholder-{{ ai_gen_id }} {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-video-content-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 1;
  }

  .ai-video-content-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-video-content-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.gap | times: 0.75 }}px;
    }

    .ai-video-content-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.75 }}px;
    }

    .ai-video-content-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<video-content-block-{{ ai_gen_id }}
  class="ai-video-content-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-video-content-container-{{ ai_gen_id }}">
    <div class="ai-video-content-text-{{ ai_gen_id }}">
      {% if block.settings.headline != blank %}
        <h2 class="ai-video-content-headline-{{ ai_gen_id }}">
          {{ block.settings.headline }}
        </h2>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-video-content-description-{{ ai_gen_id }}">
          {{ block.settings.description }}
        </div>
      {% endif %}
    </div>

    <div class="ai-video-content-video-wrapper-{{ ai_gen_id }}">
      {% if block.settings.video != blank %}
        {{ block.settings.video | video_tag:
          autoplay: true,
          loop: true,
          muted: true,
          controls: false,
          playsinline: true,
          preload: 'metadata',
          class: video_class
        }}
      {% else %}
        <div class="ai-video-content-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-video-content-empty-state-{{ ai_gen_id }}">
            Next, upload a video
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</video-content-block-{{ ai_gen_id }}>

{% schema %}
{
  "name": "Video content",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "headline",
      "label": "Headline",
      "default": "Discover our story"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Experience the perfect blend of innovation and beauty. Our products are designed to enhance your natural glow.</p>"
    },
    {
      "type": "header",
      "content": "Video"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Video file"
    },
    {
      "type": "range",
      "id": "video_border_radius",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Video border radius",
      "default": 0
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "headline_color",
      "label": "Headline color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "headline_size",
      "min": 20,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Headline size",
      "default": 40
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "description_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Description size",
      "default": 16
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "gap",
      "min": 20,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Gap between content",
      "default": 60
    },
    {
      "type": "range",
      "id": "text_gap",
      "min": 8,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Gap between text elements",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Video content"
    }
  ]
}
{% endschema %}
