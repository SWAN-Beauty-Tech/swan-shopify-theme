{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-content-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-video-content-container-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.gap }}px;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-video-content-text-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.text_gap }}px;
  }

  .ai-video-content-heading-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    line-height: 1.2;
  }

  .ai-video-content-description-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.6;
  }

  .ai-video-content-video-wrapper-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.video_size }}px;
    width: {{ block.settings.video_size }}px;
    height: {{ block.settings.video_size }}px;
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.video_border_radius }}px;
  }

  .ai-video-content-video-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-video-content-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-video-content-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-video-content-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-video-content-container-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.gap_mobile }}px;
    }

    .ai-video-content-video-wrapper-{{ ai_gen_id }} {
      flex: 0 0 {{ block.settings.video_size_mobile }}px;
      width: {{ block.settings.video_size_mobile }}px;
      height: {{ block.settings.video_size_mobile }}px;
    }

    .ai-video-content-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_mobile }}px;
    }

    .ai-video-content-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size_mobile }}px;
    }
  }
{% endstyle %}

<video-content-{{ ai_gen_id }} class="ai-video-content-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-video-content-container-{{ ai_gen_id }}">
    <div class="ai-video-content-text-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-video-content-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}
      {% if block.settings.description != blank %}
        <div class="ai-video-content-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
      {% endif %}
    </div>

    <div class="ai-video-content-video-wrapper-{{ ai_gen_id }}">
      {% if block.settings.video != blank %}
        {{
          block.settings.video
          | video_tag:
            autoplay: true,
            loop: true,
            muted: true,
            controls: false,
            class: 'ai-video-content-video-' | append: ai_gen_id
        }}
      {% else %}
        <div class="ai-video-content-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-video-content-empty-state-{{ ai_gen_id }}">
            Next, add a video
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</video-content-{{ ai_gen_id }}>

<script>
  (function() {
    class VideoContent{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        const video = this.querySelector('.ai-video-content-video-{{ ai_gen_id }}');
        if (video) {
          video.play().catch(function(error) {
            console.log('Video autoplay failed:', error);
          });
        }
      }
    }

    customElements.define('video-content-{{ ai_gen_id }}', VideoContent{{ ai_gen_id }});
  })();
</script>

