{% doc %}
  @prompt
    Create me a block with a centered Headline and a lso centered Description Text which is left aligned underneath.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-text-block-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 40px 20px;
  }

  .ai-text-block__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    text-align: center;
  }

  .ai-text-block__heading-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.spacing }}px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    font-weight: {{ block.settings.heading_weight }};
  }

  .ai-text-block__description-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    text-align: left;
    line-height: 1.6;
  }

  @media screen and (max-width: 749px) {
    .ai-text-block-{{ ai_gen_id }} {
      padding: 30px 15px;
    }

    .ai-text-block__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 1,5);
    }

    .ai-text-block__description-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.description_size }}px * 0.9);
    }
  }
{% endstyle %}

<centered-text-block-{{ ai_gen_id }} class="ai-text-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-text-block__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-text-block__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-text-block__description-{{ ai_gen_id }}">
        {{ block.settings.description }}
      </div>
    {% endif %}
  </div>
</centered-text-block-{{ ai_gen_id }}>

{% schema %}
{
  "name": "Centered text block",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Your Headline Here"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>This is your description text that will be left-aligned underneath the centered headline. You can add multiple paragraphs and format your text as needed.</p>"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Maximum width",
      "default": 800
    },
    {
      "type": "range",
      "id": "spacing",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "px",
      "label": "Space between heading and description",
      "default": 20
    },
    {
      "type": "header",
      "content": "Heading style"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Font size",
      "default": 32
    },
    {
      "type": "select",
      "id": "heading_weight",
      "label": "Font weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi-bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "600"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Description style"
    },
    {
      "type": "range",
      "id": "description_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Font size",
      "default": 16
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Centered text block"
    }
  ]
}
{% endschema %}
