{% doc %}
  @prompt
    I want to build a block with a video on the left side and text on the right half

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-text-block-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.gap }}px;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;}

  .ai-video-text-block__video-{{ ai_gen_id }} {
    flex: 1;position: relative;
    width: 100%;
    aspect-ratio: 16/9;
    border-radius: {{ block.settings.video_border_radius }}px;
    overflow: hidden;
  }

  .ai-video-text-block__video-{{ ai_gen_id }} video {
    width: 100%;
    height: 100%;
    object-fit: cover;border-radius: {{ block.settings.video_border_radius }}px;
  }

  .ai-video-text-block__video-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.video_border_radius }}px;
  }

  .ai-video-text-block__video-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    color: #999;
  }

  .ai-video-text-block__content-{{ ai_gen_id }} {
    flex: 1;
    color: {{ block.settings.text_color }};
  }

  .ai-video-text-block__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    margin: 0 0 {{ block.settings.heading_margin }}px 0;
    color: {{ block.settings.heading_color }};
  }

  .ai-video-text-block__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin: 0 0 {{ block.settings.text_margin }}px 0;}

  .ai-video-text-block__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .ai-video-text-block__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-video-text-block-{{ ai_gen_id }} {
      flex-direction: column;
      text-align: center;
    }

    .ai-video-text-block__video-{{ ai_gen_id }} {
      width: 100%;}

    .ai-video-text-block__content-{{ ai_gen_id }} {
      width: 100%;}
  }
{% endstyle %}

<div class="ai-video-text-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-video-text-block__video-{{ ai_gen_id }}">
    {% if block.settings.video %}
      <video
        {% if block.settings.autoplay %}autoplay{% endif %}
        {% if block.settings.loop %}loop{% endif %}
        {% if block.settings.muted %}muted{% endif %}
        {% if block.settings.controls %}controls{% endif %}
        playsinline
        preload="metadata"
      >
        <source src="{{ block.settings.video }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    {% else %}
      <div class="ai-video-text-block__video-placeholder-{{ ai_gen_id }}">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polygon points="23 7 16 12 23 17 23 7"></polygon>
          <rect x="1" y="5" width="15" height="14" rx="2" ry="2"></rect>
        </svg>
      </div>
    {% endif %}
  </div>

  <div class="ai-video-text-block__content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-video-text-block__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.text != blank %}
      <div class="ai-video-text-block__text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
    {% endif %}

    {% if block.settings.button_text != blank and block.settings.button_link != blank %}
      <a href="{{ block.settings.button_link }}" class="ai-video-text-block__button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

