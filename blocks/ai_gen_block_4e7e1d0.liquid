{% doc %}
  @prompt
    A centered Headline
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-centered-headline-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    margin: 0 auto;
    text-align: center;
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
  }

  .ai-centered-headline__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    font-weight: {{ block.settings.font_weight }};
    line-height: {{ block.settings.line_height }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-centered-headline__text-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.font_size }}px * 0.8);
    }
  }
{% endstyle %}

<div class="ai-centered-headline-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading_tag == 'h1' %}
    <h1 class="ai-centered-headline__text-{{ ai_gen_id }}">{{ block.settings.headline_text }}</h1>
  {% elsif block.settings.heading_tag == 'h2' %}
    <h2 class="ai-centered-headline__text-{{ ai_gen_id }}">{{ block.settings.headline_text }}</h2>
  {% elsif block.settings.heading_tag == 'h3' %}
    <h3 class="ai-centered-headline__text-{{ ai_gen_id }}">{{ block.settings.headline_text }}</h3>
  {% elsif block.settings.heading_tag == 'h4' %}
    <h4 class="ai-centered-headline__text-{{ ai_gen_id }}">{{ block.settings.headline_text }}</h4>
  {% elsif block.settings.heading_tag == 'h5' %}
    <h5 class="ai-centered-headline__text-{{ ai_gen_id }}">{{ block.settings.headline_text }}</h5>
  {% elsif block.settings.heading_tag == 'h6' %}
    <h6 class="ai-centered-headline__text-{{ ai_gen_id }}">{{ block.settings.headline_text }}</h6>
  {% else %}
    <p class="ai-centered-headline__text-{{ ai_gen_id }}">{{ block.settings.headline_text }}</p>
  {% endif %}
</div>

{% schema %}
{
  "name": "Centered headline",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "headline_text",
      "label": "Headline text",
      "default": "Your headline here"
    },
    {
      "type": "select",
      "id": "heading_tag",
      "label": "Heading tag",
      "options": [
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        },
        {
          "value": "h4",
          "label": "H4"
        },
        {
          "value": "h5",
          "label": "H5"
        },
        {
          "value": "h6",
          "label": "H6"
        },
        {
          "value": "p",
          "label": "Paragraph"
        }
      ],
      "default": "h2"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font size",
      "min": 16,
      "max": 80,
      "step": 2,
      "unit": "px",
      "default": 40
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font weight",
      "options": [
        {
          "value": "300",
          "label": "Light"
        },
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "700"
    },
    {
      "type": "range",
      "id": "line_height",
      "label": "Line height",
      "min": 1,
      "max": 2,
      "step": 0.1,
      "default": 1.2
    },
    {
      "type": "range",
      "id": "letter_spacing",
      "label": "Letter spacing",
      "min": -2,
      "max": 4,
      "step": 0.5,
      "unit": "px",
      "default": 0
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    }
  ],
  "presets": [
    {
      "name": "Centered headline"
    }
  ]
}
{% endschema %}
