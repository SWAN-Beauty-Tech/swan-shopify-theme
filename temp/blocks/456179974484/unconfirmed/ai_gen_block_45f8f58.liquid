{% doc %}
  @prompt
    marquee logo list

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-marquee-logos-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
    position: relative;
  }

  .ai-marquee-logos-track-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.logo_spacing }}px;
    animation: ai-marquee-scroll-{{ ai_gen_id }} {{ block.settings.animation_speed }}s linear infinite;
    width: max-content;
  }

  .ai-marquee-logos-{{ ai_gen_id }}:hover .ai-marquee-logos-track-{{ ai_gen_id }} {
    animation-play-state: {% if block.settings.pause_on_hover %}paused{% else %}running{% endif %};
  }

  .ai-marquee-logo-item-{{ ai_gen_id }} {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    height: {{ block.settings.logo_height }}px;
    opacity: {{ block.settings.logo_opacity | divided_by: 100.0 }};
    transition: opacity 0.3s ease;
  }

  .ai-marquee-logo-item-{{ ai_gen_id }}:hover {
    opacity: 1;
  }

  .ai-marquee-logo-item-{{ ai_gen_id }} img {
    max-height: 100%;
    max-width: {{ block.settings.logo_max_width }}px;
    width: auto;
    height: auto;
    object-fit: contain;
    filter: {% if block.settings.grayscale_logos %}grayscale(100%){% else %}none{% endif %};transition: filter 0.3s ease;
  }

  .ai-marquee-logo-item-{{ ai_gen_id }}:hover img {
    filter: {% if block.settings.grayscale_logos %}grayscale(0%){% else %}none{% endif %};
  }

  .ai-marquee-logo-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.logo_max_width }}px;
    height: {{ block.settings.logo_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    position: relative;
  }

  .ai-marquee-logo-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-marquee-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 8px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
    white-space: nowrap;
  }

  @keyframes ai-marquee-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-marquee-logos-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_vertical | times: 0.7 }}px 0;
    }

    .ai-marquee-logo-item-{{ ai_gen_id }} {
      height: {{ block.settings.logo_height | times: 0.8 }}px;
    }

    .ai-marquee-logo-item-{{ ai_gen_id }} img {
      max-width: {{ block.settings.logo_max_width | times: 0.8 }}px;
    }

    .ai-marquee-logo-placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.logo_max_width | times: 0.8 }}px;
      height: {{ block.settings.logo_height | times: 0.8 }}px;
    }
  }
{% endstyle %}<div class="ai-marquee-logos-{{ ai_gen_id }}" {{ block.shopify_attributes }}><div class="ai-marquee-logos-track-{{ ai_gen_id }}">
    {% assign has_logos = false %}
    {% for i in (1..8) %}
      {% assign logo_key = 'logo_' | append: i %}
      {% if block.settings[logo_key] != blank %}
        {% assign has_logos = true %}
        <div class="ai-marquee-logo-item-{{ ai_gen_id }}">
          <img
            src="{{ block.settings[logo_key] | image_url: width: 400}}"
            alt="{{ block.settings[logo_key].alt | escape }}"
            loading="lazy"
            width="{{ block.settings[logo_key].width }}"
            height="{{ block.settings[logo_key].height }}">
        </div>
      {% endif %}
    {% endfor %}

    {% unless has_logos %}
      {% for i in (1..6) %}
        <div class="ai-marquee-logo-item-{{ ai_gen_id }}">
          <div class="ai-marquee-logo-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}{% if forloop.first %}
              <div class="ai-marquee-empty-state-{{ ai_gen_id }}">
                Add logos
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    {% endunless %}

    {% if has_logos %}
      {% for i in (1..8) %}
        {% assign logo_key = 'logo_' | append: i %}
        {% if block.settings[logo_key] != blank %}
          <div class="ai-marquee-logo-item-{{ ai_gen_id }}">
            <img
              src="{{ block.settings[logo_key] | image_url: width: 400 }}"
              alt="{{ block.settings[logo_key].alt | escape }}"
              loading="lazy"
              width="{{ block.settings[logo_key].width }}"
              height="{{ block.settings[logo_key].height }}"
            >
          </div>
        {% endif %}
      {% endfor %}
    {% endif %}
  </div>
</div>

