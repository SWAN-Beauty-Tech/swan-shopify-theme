{% doc %}
  @prompt
    Product + video

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-video-{{ ai_gen_id }} {
    display: grid;
    gap: {{ block.settings.spacing }}px;
    max-width: 100%;
  }

  .ai-product-video-{{ ai_gen_id }}--layout-side-by-side {
    grid-template-columns: 1fr1fr;
    align-items: center;
  }

  .ai-product-video-{{ ai_gen_id }}--layout-stacked {
    grid-template-columns: 1fr;
  }

  .ai-product-video-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.video_border_radius }}px;
    overflow: hidden;
  }

  .ai-product-video-wrapper-{{ ai_gen_id }} video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-video-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-product-video-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    color: #999;
  }

  .ai-product-video-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-product-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-product-image-{{ ai_gen_id }} {
    width: 100%;
    max-width: 200px;
    aspect-ratio: 1;
    object-fit: cover;
    border-radius: {{ block.settings.product_image_border_radius }}px;
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    max-width: 200px;
    aspect-ratio: 1;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.product_image_border_radius }}px;display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    color: #999;
  }

  .ai-product-image-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
    white-space: nowrap;
  }

  .ai-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0;}

  .ai-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: 500;
  }

  .ai-product-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.5;
  }

  .ai-product-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
    border: none;
    cursor: pointer;
    font-size: 16px;
  }

  .ai-product-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-product-empty-state-{{ ai_gen_id }} {
    padding: 40px 20px;
    text-align: center;
    color: #666;
    font-style: italic;
  }

  @media screen and (max-width: 749px) {
    .ai-product-video-{{ ai_gen_id }}--layout-side-by-side {
      grid-template-columns: 1fr;
      gap: {{ block.settings.spacing | divided_by: 2 }}px;
    }

    .ai-product-video-{{ ai_gen_id }} {
      gap: {{ block.settings.spacing | divided_by: 2 }}px;
    }

    .ai-product-content-{{ ai_gen_id }} {
      text-align: center;
    }

    .ai-product-image-{{ ai_gen_id }},
    .ai-product-image-placeholder-{{ ai_gen_id }} {
      margin: 0 auto;
    }
  }
{% endstyle %}<div 
  class="ai-product-video-{{ ai_gen_id }} ai-product-video-{{ ai_gen_id }}--layout-{{ block.settings.layout }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-product-video-wrapper-{{ ai_gen_id }}">
    {% if block.settings.video %}
      <video 
        controls
        {% if block.settings.autoplay %}autoplay{% endif %}
        {% if block.settings.muted %}muted{% endif %}
        {% if block.settings.loop %}loop{% endif %}
        preload="metadata"
      >
        <source src="{{ block.settings.video }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    {% else %}
      <div class="ai-product-video-placeholder-{{ ai_gen_id }}">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polygon points="5,3 19,12 5,21"></polygon>
        </svg><div class="ai-product-video-empty-state-{{ ai_gen_id }}">
          Add a product video
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-product-content-{{ ai_gen_id }}">
    {% if block.settings.product %}
      {% if block.settings.show_product_image and block.settings.product.featured_image %}
        <img
          src="{{ block.settings.product.featured_image | image_url: width: 400 }}"
          alt="{{ block.settings.product.featured_image.alt | escape }}"
          class="ai-product-image-{{ ai_gen_id }}"
          loading="lazy"
          width="400"
          height="400"
        >
      {% elsif block.settings.show_product_image %}
        <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
          {{ 'product-1' | placeholder_svg_tag }}<div class="ai-product-image-empty-state-{{ ai_gen_id }}">
            No image
          </div>
        </div>
      {% endif %}

      <h3 class="ai-product-title-{{ ai_gen_id }}">{{ block.settings.product.title }}</h3>
      
      <div class="ai-product-price-{{ ai_gen_id }}">
        {% if block.settings.product.compare_at_price > block.settings.product.price %}
          <span style="text-decoration: line-through; opacity: 0.7;">{{ block.settings.product.compare_at_price | money }}</span>
        {% endif %}
        {{ block.settings.product.price | money }}
      </div>

      {% if block.settings.show_description and block.settings.product.description != blank %}
        <div class="ai-product-description-{{ ai_gen_id }}">
          {{ block.settings.product.description | truncate: 150 }}
        </div>
      {% endif %}

      <a href="{{ block.settings.product.url }}" class="ai-product-button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    {% else %}
      <div class="ai-product-empty-state-{{ ai_gen_id }}">
        Select a product to display
      </div>
    {% endif %}
  </div>
</div>

