{% doc %}
  @prompt
    Numbers

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-numbers-block-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-numbers-container-{{ ai_gen_id }} {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-numbers-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.gap }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-numbers-item-{{ ai_gen_id }} {
    padding: {{ block.settings.item_padding }}px;
    background-color: {{ block.settings.item_background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
  }

  .ai-numbers-number-{{ ai_gen_id }} {
    font-size: {{ block.settings.number_size }}px;
    font-weight: {{ block.settings.number_weight }};
    color: {{ block.settings.number_color }};
    margin:0 0 {{ block.settings.number_margin_bottom }}px;line-height: 1.2;
  }

  .ai-numbers-label-{{ ai_gen_id }} {
    font-size: {{ block.settings.label_size }}px;
    color: {{ block.settings.label_color }};
    margin: 0;
    line-height: 1.4;
  }

  @media screen and (max-width: 749px) {
    .ai-numbers-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }
    .ai-numbers-number-{{ ai_gen_id }} {
      font-size: {{ block.settings.number_size | times: 0.8 }}px;
    }
    .ai-numbers-label-{{ ai_gen_id }} {
      font-size: {{ block.settings.label_size | times: 0.9 }}px;
    }
  }
{% endstyle %}<div class="ai-numbers-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-numbers-container-{{ ai_gen_id }}">
    <div class="ai-numbers-grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign number_key = 'number_' | append: i
          assign label_key = 'label_' | append: i
          assign number_value = block.settings[number_key]
          assign label_value = block.settings[label_key]
        %}
        
        {% if number_value != blank or label_value != blank %}
          <div class="ai-numbers-item-{{ ai_gen_id }}">
            {% if number_value != blank %}
              <div class="ai-numbers-number-{{ ai_gen_id }}">{{ number_value }}</div>
            {% endif %}
            {% if label_value != blank %}
              <div class="ai-numbers-label-{{ ai_gen_id }}">{{ label_value }}</div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

