{% doc %}
  @prompt
    Playable video plus product side by side

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-product-container-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.gap }}px;
    align-items: center;
    max-width: 100%;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-video-product-video-wrapper-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
    width: 100%;
  }

  .ai-video-product-video-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.video_border_radius }}px;
    object-fit: cover;
  }

  .ai-video-product-video-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 16/9;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.video_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-video-product-video-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-video-product-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-video-product-content-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-video-product-product-wrapper-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    align-items: flex-start;
  }

  .ai-video-product-product-image-{{ ai_gen_id }} {
    width: {{ block.settings.product_image_size }}px;
    height: {{ block.settings.product_image_size }}px;
    flex-shrink: 0;border-radius: {{ block.settings.product_image_border_radius }}px;
    overflow: hidden;
  }

  .ai-video-product-product-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-video-product-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-video-product-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;}

  .ai-video-product-product-info-{{ ai_gen_id }} {
    flex: 1;}

  .ai-video-product-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0 0 8px 0;line-height: 1.3;
  }

  .ai-video-product-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.price_color }};
    margin: 0 0 12px 0;
    font-weight: 500;
  }

  .ai-video-product-product-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_description_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.5;
    margin: 0 0 16px 0;
  }

  .ai-video-product-product-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .ai-video-product-product-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-video-product-empty-product-{{ ai_gen_id }} {
    padding: 40px 20px;
    text-align: center;
    color: #666;
    font-style: italic;
    background-color: #f9f9f9;
    border-radius: 8px;
    border: 2px dashed #ddd;
  }

  @media screen and (max-width: 768px) {
    .ai-video-product-container-{{ ai_gen_id }} {
      flex-direction: {% if block.settings.mobile_layout == 'video_top' %}column{% else %}column-reverse{% endif %};
      gap: {{ block.settings.gap | times: 0.75 }}px;
    }

    .ai-video-product-product-wrapper-{{ ai_gen_id }} {
      gap: 12px;
    }

    .ai-video-product-product-image-{{ ai_gen_id }} {
      width: {{ block.settings.product_image_size | times: 0.8 }}px;
      height: {{ block.settings.product_image_size | times: 0.8 }}px;
    }
  }
{% endstyle %}<div
  class="ai-video-product-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-video-product-video-wrapper-{{ ai_gen_id }}">
    {% if block.settings.video %}
      <video
        class="ai-video-product-video-{{ ai_gen_id }}"
        controls
        {% if block.settings.autoplay %}autoplay{% endif %}
        {% if block.settings.muted %}muted{% endif %}
        {% if block.settings.loop %}loop{% endif %}
        preload="metadata"
      >
        <source src="{{ block.settings.video }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    {% else %}
      <div class="ai-video-product-video-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-video-product-empty-state-{{ ai_gen_id }}">
          Add a video to get started
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-video-product-content-{{ ai_gen_id }}">
    {% if block.settings.product %}
      <div class="ai-video-product-product-wrapper-{{ ai_gen_id }}">
        <div class="ai-video-product-product-image-{{ ai_gen_id }}">
          {% if block.settings.product.featured_image %}
            <img
              src="{{ block.settings.product.featured_image | image_url: width: 300}}"
              alt="{{ block.settings.product.featured_image.alt | escape }}"
              loading="lazy"
              width="300"
              height="300"
            >
          {% else %}<div class="ai-video-product-product-image-placeholder-{{ ai_gen_id }}">
              {{ 'product-apparel-1' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>

        <div class="ai-video-product-product-info-{{ ai_gen_id }}">
          <h3 class="ai-video-product-product-title-{{ ai_gen_id }}">
            {{ block.settings.product.title }}
          </h3>

          <div class="ai-video-product-product-price-{{ ai_gen_id }}">
            {% if block.settings.product.compare_at_price > block.settings.product.price %}
              <span style="text-decoration: line-through; opacity: 0.7;">
                {{ block.settings.product.compare_at_price | money }}
              </span>
              {{ block.settings.product.price | money }}
            {% else %}
              {{ block.settings.product.price | money }}
            {% endif %}
          </div>

          {% if block.settings.show_description and block.settings.product.description != blank %}
            <div class="ai-video-product-product-description-{{ ai_gen_id }}">
              {{ block.settings.product.description | truncate: 150 }}
            </div>
          {% endif %}

          <a
            href="{{ block.settings.product.url }}"
            class="ai-video-product-product-button-{{ ai_gen_id }}"
          >
            {{ block.settings.button_text }}
          </a>
        </div>
      </div>
    {% else %}
      <div class="ai-video-product-empty-product-{{ ai_gen_id }}">
        Select a product to display alongside your video
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Video with product",
  "settings": [
    {
      "type": "header",
      "content": "Video"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Video"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay video",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "muted",
      "label": "Mute video",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "loop",
      "label": "Loop video",
      "default": false
    },
    {
      "type": "range",
      "id": "video_border_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Video border radius",
      "default": 8
    },
    {
      "type": "header",
      "content": "Product"
    },
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show product description",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop now"
    },
    {
      "type": "range",
      "id": "product_image_size",
      "min": 60,
      "max": 150,
      "step": 10,
      "unit": "px",
      "label": "Product image size",
      "default": 100
    },
    {
      "type": "range",
      "id": "product_image_border_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Product image border radius",
      "default": 8
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "mobile_layout",
      "label": "Mobile layout",
      "options": [
        {
          "value": "video_top",
          "label": "Video on top"
        },
        {
          "value": "product_top",
          "label": "Product on top"
        }
      ],
      "default": "video_top"
    },
    {
      "type": "range",
      "id": "gap",
      "min": 16,
      "max": 80,
      "step": 8,
      "unit": "px",
      "label": "Gap between video and product",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Container padding",
      "default": 20
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "price_color",
      "label": "Price color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Button hover color",
      "default": "#333333"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "product_title_size",
      "min": 14,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Product title size",
      "default": 20
    },
    {
      "type": "range",
      "id": "product_price_size",
      "min": 12,
      "max": 24,
      "step": 2,
      "unit": "px",
      "label": "Product price size",
      "default": 16
    },
    {
      "type": "range",
      "id": "product_description_size",
      "min": 12,
      "max": 18,
      "step": 1,
      "unit": "px",
      "label": "Product description size",
      "default": 14
    },
    {
      "type": "range",
      "id": "button_border_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Button border radius",
      "default": 6
    }
  ],
  "presets": [
    {
      "name": "Video with product"
    }
  ],
  "tag": null
}
{% endschema %}