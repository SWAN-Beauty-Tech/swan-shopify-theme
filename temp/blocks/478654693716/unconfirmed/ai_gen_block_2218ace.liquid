{% doc %}
  @prompt
    A module with the video on the right side and a headline and text on the left side
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-content-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-video-content-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-video-content-wrapper-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.column_gap }}px;
    align-items: center;
  }

  .ai-video-content-text-{{ ai_gen_id }} {
    padding-right: 20px;
  }

  .ai-video-content-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.text_spacing }}px;
    line-height: 1.2;
  }

  .ai-video-content-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0;
  }

  .ai-video-content-video-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    border-radius: {{ block.settings.video_border_radius }}px;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-video-content-video-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-video-content-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-video-content-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.3;
  }

  .ai-video-content-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 768px) {
    .ai-video-content-wrapper-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .ai-video-content-text-{{ ai_gen_id }} {
      padding-right: 0;
      order: {{ block.settings.mobile_content_order }};
    }

    .ai-video-content-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-video-content-description-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.text_size }}px * 0.9);
    }
  }
{% endstyle %}

<div class="ai-video-content-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-video-content-container-{{ ai_gen_id }}">
    <div class="ai-video-content-wrapper-{{ ai_gen_id }}">
      <div class="ai-video-content-text-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-video-content-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-video-content-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>

      <div class="ai-video-content-video-container-{{ ai_gen_id }}">
        <div class="ai-video-content-video-wrapper-{{ ai_gen_id }}">
          {% if block.settings.video != blank %}
            <video
              class="ai-video-content-video-{{ ai_gen_id }}"
              {% if block.settings.autoplay %}autoplay{% endif %}
              {% if block.settings.loop %}loop{% endif %}
              {% if block.settings.muted %}muted{% endif %}
              {% if block.settings.controls %}controls{% endif %}
              playsinline
            >
              <source src="{{ block.settings.video }}" type="video/mp4">
            </video>
          {% elsif block.settings.video_url != blank %}
            {% if block.settings.video_url contains 'youtube.com' or block.settings.video_url contains 'youtu.be' %}
              {% assign video_id = block.settings.video_url | split: 'v=' | last | split: '/' | last | split: '&' | first %}
              <iframe
                class="ai-video-content-video-{{ ai_gen_id }}"
                src="https://www.youtube.com/embed/{{ video_id }}?autoplay={{ block.settings.autoplay }}&loop={{ block.settings.loop }}&mute={{ block.settings.muted }}&controls={{ block.settings.controls }}"
                frameborder="0"
                allow="autoplay; encrypted-media"
                allowfullscreen
              ></iframe>
            {% elsif block.settings.video_url contains 'vimeo.com' %}
              {% assign video_id = block.settings.video_url | split: '/' | last %}
              <iframe
                class="ai-video-content-video-{{ ai_gen_id }}"
                src="https://player.vimeo.com/video/{{ video_id }}?autoplay={{ block.settings.autoplay }}&loop={{ block.settings.loop }}&muted={{ block.settings.muted }}"
                frameborder="0"
                allow="autoplay; fullscreen"
                allowfullscreen
              ></iframe>
            {% endif %}
          {% else %}
            <div class="ai-video-content-placeholder-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="5 3 19 12 5 21 5 3"></polygon>
              </svg>
              <div class="ai-video-content-empty-state-{{ ai_gen_id }}">
                Next, add a video
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Video with content",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Discover our story"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Watch this video to learn more about our brand, our values, and what makes us unique.</p>"
    },
    {
      "type": "header",
      "content": "Video"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Video file"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "loop",
      "label": "Loop",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "muted",
      "label": "Muted",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "controls",
      "label": "Show controls",
      "default": true
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 36
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 16
    },
    {
      "type": "range",
      "id": "text_spacing",
      "min": 10,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Spacing below heading",
      "default": 20
    },
    {
      "type": "range",
      "id": "video_border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Video border radius",
      "default": 0
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "container_width",
      "min": 1000,
      "max": 1600,
      "step": 100,
      "unit": "px",
      "label": "Container width",
      "default": 1400
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Section padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "column_gap",
      "min": 20,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Gap between columns",
      "default": 60
    },
    {
      "type": "select",
      "id": "mobile_content_order",
      "label": "Mobile content order",
      "options": [
        {
          "value": "1",
          "label": "Text first"
        },
        {
          "value": "2",
          "label": "Video first"
        }
      ],
      "default": "1"
    }
  ],
  "presets": [
    {
      "name": "Video with content"
    }
  ]
}
{% endschema %}
