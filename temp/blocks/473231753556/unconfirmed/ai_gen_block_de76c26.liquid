{% doc %}
  @prompt
    A image collage with pictures next to eachother. Maximum of 6, Make the images smaller so they can stay next to each other in one row, Please also insert a Headline and subline , The text of the subline has to be adapted to the template
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-collage-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-image-collage-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-image-collage-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-image-collage-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.subheading_spacing }}px 0;
    font-weight: 600;
    line-height: 1.2;
  }

  .ai-image-collage-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
    line-height: 1.5;
    font-family: var(--font-body-family);
    font-weight: var(--font-body-weight);
  }

  .ai-image-collage-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: {{ block.settings.gap }}px;
    max-width: 100%;
  }

  .ai-image-collage-item-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.image_radius }}px;
  }

  .ai-image-collage-item-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    aspect-ratio: {{ block.settings.aspect_ratio }};
  }

  .ai-image-collage-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: {{ block.settings.aspect_ratio }};
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_radius }}px;
  }

  .ai-image-collage-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media screen and (max-width: 989px) {
    .ai-image-collage-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
    }

    .ai-image-collage-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-image-collage-subheading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheading_size }}px * 0.9);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-image-collage-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.gap_mobile }}px;
    }

    .ai-image-collage-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.7);
    }

    .ai-image-collage-subheading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheading_size }}px * 0.85);
    }
  }
{% endstyle %}

<div class="ai-image-collage-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-collage-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-image-collage-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-image-collage-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <div class="ai-image-collage-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-image-collage-grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign image_key = 'image_' | append: i
          assign image = block.settings[image_key]
        %}
        
        {% if image != blank %}
          <div class="ai-image-collage-item-{{ ai_gen_id }}">
            <img
              src="{{ image | image_url: width: 400 }}"
              alt="{{ image.alt | escape }}"
              loading="lazy"
              width="{{ image.width }}"
              height="{{ image.height }}"
            >
          </div>
        {% else %}
          <div class="ai-image-collage-item-{{ ai_gen_id }}">
            <div class="ai-image-collage-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

