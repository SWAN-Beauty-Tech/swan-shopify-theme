{% doc %}
  @prompt
    create a review block. Where we can post customer reviews with Name, Amount of Stars, picture and comments. The Reviews should be scrollable from left to right - max. amount of reviews are 10
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-reviews-container-{{ ai_gen_id }} {
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-reviews-heading-{{ ai_gen_id }} {
    text-align: center;
    margin: 0 0 30px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
  }

  .ai-reviews-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    margin: 0 auto;
    max-width: 1400px;
  }

  .ai-reviews-scroll-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: thin;
    scrollbar-color: {{ block.settings.scrollbar_color }} transparent;
    padding-bottom: 10px;
  }

  .ai-reviews-scroll-{{ ai_gen_id }}::-webkit-scrollbar {
    height: 8px;
  }

  .ai-reviews-scroll-{{ ai_gen_id }}::-webkit-scrollbar-track {
    background: transparent;
  }

  .ai-reviews-scroll-{{ ai_gen_id }}::-webkit-scrollbar-thumb {
    background-color: {{ block.settings.scrollbar_color }};
    border-radius: 4px;
  }

  .ai-review-card-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.card_width }}px;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: 24px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-review-header-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .ai-review-image-{{ ai_gen_id }} {
    width: {{ block.settings.image_size }}px;
    height: {{ block.settings.image_size }}px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
    background-color: #f4f4f4;
  }

  .ai-review-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-review-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.placeholder_bg }};
    color: {{ block.settings.placeholder_text }};
    font-size: {{ block.settings.image_size | divided_by: 2 }}px;
    font-weight: 600;
  }

  .ai-review-info-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .ai-review-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.name_size }}px;
    font-weight: 600;
    color: {{ block.settings.name_color }};
    margin: 0 0 4px;
  }

  .ai-review-stars-{{ ai_gen_id }} {
    display: flex;
    gap: 2px;
  }

  .ai-review-star-{{ ai_gen_id }} {
    width: {{ block.settings.star_size }}px;
    height: {{ block.settings.star_size }}px;
    fill: {{ block.settings.star_color }};
  }

  .ai-review-star-empty-{{ ai_gen_id }} {
    fill: {{ block.settings.star_empty_color }};
  }

  .ai-review-comment-{{ ai_gen_id }} {
    font-size: {{ block.settings.comment_size }}px;
    line-height: 1.5;
    color: {{ block.settings.comment_color }};
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-review-card-{{ ai_gen_id }} {
      flex: 0 0 280px;
    }
  }
{% endstyle %}

<customer-reviews-{{ ai_gen_id }} class="ai-reviews-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="ai-reviews-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {% endif %}

  <div class="ai-reviews-wrapper-{{ ai_gen_id }}">
    <div class="ai-reviews-scroll-{{ ai_gen_id }}">
      {% for i in (1..10) %}
        {% liquid
          assign review_enabled_key = 'review_' | append: i | append: '_enabled'
          assign review_name_key = 'review_' | append: i | append: '_name'
          assign review_stars_key = 'review_' | append: i | append: '_stars'
          assign review_image_key = 'review_' | append: i | append: '_image'
          assign review_comment_key = 'review_' | append: i | append: '_comment'

          assign review_enabled = block.settings[review_enabled_key]
          assign review_name = block.settings[review_name_key]
          assign review_stars = block.settings[review_stars_key]
          assign review_image = block.settings[review_image_key]
          assign review_comment = block.settings[review_comment_key]
        %}

        {% if review_enabled %}
          <div class="ai-review-card-{{ ai_gen_id }}">
            <div class="ai-review-header-{{ ai_gen_id }}">
              <div class="ai-review-image-{{ ai_gen_id }}">
                {% if review_image %}
                  <img
                    src="{{ review_image | image_url: width: 200 }}"
                    alt="{{ review_name | escape }}"
                    loading="lazy"
                    width="200"
                    height="200"
                  >
                {% else %}
                  <div class="ai-review-image-placeholder-{{ ai_gen_id }}">
                    {% if review_name != blank %}
                      {{ review_name | slice: 0 | upcase }}
                    {% else %}
                      ?
                    {% endif %}
                  </div>
                {% endif %}
              </div>
              <div class="ai-review-info-{{ ai_gen_id }}">
                <h3 class="ai-review-name-{{ ai_gen_id }}">
                  {% if review_name != blank %}
                    {{ review_name }}
                  {% else %}
                    Customer
                  {% endif %}
                </h3>
                <div class="ai-review-stars-{{ ai_gen_id }}">
                  {% for star in (1..5) %}
                    <svg
                      class="ai-review-star-{{ ai_gen_id }} {% if star > review_stars %}ai-review-star-empty-{{ ai_gen_id }}{% endif %}"
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                    >
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                  {% endfor %}
                </div>
              </div>
            </div>
            {% if review_comment != blank %}
              <p class="ai-review-comment-{{ ai_gen_id }}">{{ review_comment }}</p>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</customer-reviews-{{ ai_gen_id }}>

<script>
  (function() {
    class CustomerReviews{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.scrollContainer = this.querySelector('.ai-reviews-scroll-{{ ai_gen_id }}');
        this.setupScrollBehavior();
      }

      setupScrollBehavior() {
        if (!this.scrollContainer) return;

        let isDown = false;
        let startX;
        let scrollLeft;

        this.scrollContainer.addEventListener('mousedown', (e) => {
          isDown = true;
          this.scrollContainer.style.cursor = 'grabbing';
          startX = e.pageX - this.scrollContainer.offsetLeft;
          scrollLeft = this.scrollContainer.scrollLeft;
        });

        this.scrollContainer.addEventListener('mouseleave', () => {
          isDown = false;
          this.scrollContainer.style.cursor = 'grab';
        });

        this.scrollContainer.addEventListener('mouseup', () => {
          isDown = false;
          this.scrollContainer.style.cursor = 'grab';
        });

        this.scrollContainer.addEventListener('mousemove', (e) => {
          if (!isDown) return;
          e.preventDefault();
          const x = e.pageX - this.scrollContainer.offsetLeft;
          const walk = (x - startX) * 2;
          this.scrollContainer.scrollLeft = scrollLeft - walk;
        });

        this.scrollContainer.style.cursor = 'grab';
      }
    }

    customElements.define('customer-reviews-{{ ai_gen_id }}', CustomerReviews{{ ai_gen_id }});
  })();
</script>

