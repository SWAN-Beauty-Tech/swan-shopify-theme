{% doc %}
  @prompt
    Create me A Blog with a Picture in a round frame on the left and a Headline with a description on the right. This should showcase the Teammember Profil.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-team-member-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-team-member-container-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.gap }}px;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-team-member-image-wrapper-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.image_size }}px;
    height: {{ block.settings.image_size }}px;
    border-radius: 50%;
    overflow: hidden;
    border: {{ block.settings.image_border_width }}px solid {{ block.settings.image_border_color }};
  }

  .ai-team-member-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-team-member-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-team-member-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-team-member-content-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-team-member-name-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.name_spacing }}px;
    font-size: {{ block.settings.name_size }}px;
    font-weight: {{ block.settings.name_weight }};
    color: {{ block.settings.name_color }};
    line-height: 1.2;
  }

  .ai-team-member-role-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.role_spacing }}px;
    font-size: {{ block.settings.role_size }}px;
    font-weight: {{ block.settings.role_weight }};
    color: {{ block.settings.role_color }};
    line-height: 1.4;
  }

  .ai-team-member-description-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.6;
  }

  @media screen and (max-width: 749px) {
    .ai-team-member-container-{{ ai_gen_id }} {
      flex-direction: {% if block.settings.mobile_layout == 'column' %}column{% else %}row{% endif %};
      text-align: {% if block.settings.mobile_layout == 'column' %}center{% else %}left{% endif %};
    }

    .ai-team-member-image-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.image_size | times: 0.8 }}px;
      height: {{ block.settings.image_size | times: 0.8 }}px;
    }

    .ai-team-member-name-{{ ai_gen_id }} {
      font-size: {{ block.settings.name_size | times: 0.9 }}px;
    }

    .ai-team-member-role-{{ ai_gen_id }} {
      font-size: {{ block.settings.role_size | times: 0.9 }}px;
    }

    .ai-team-member-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-team-member-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-team-member-container-{{ ai_gen_id }}">
    <div class="ai-team-member-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 600 }}"
          alt="{{ block.settings.name | escape }}"
          loading="lazy"
          width="600"
          height="600"
          class="ai-team-member-image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-team-member-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>

    <div class="ai-team-member-content-{{ ai_gen_id }}">
      {% if block.settings.name != blank %}
        <h3 class="ai-team-member-name-{{ ai_gen_id }}">{{ block.settings.name }}</h3>
      {% endif %}

      {% if block.settings.role != blank %}
        <div class="ai-team-member-role-{{ ai_gen_id }}">{{ block.settings.role }}</div>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-team-member-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
      {% endif %}
    </div>
  </div>
</div>

