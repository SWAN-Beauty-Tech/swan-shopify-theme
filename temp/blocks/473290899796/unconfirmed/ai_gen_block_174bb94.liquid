{% doc %}
  @prompt
    I want a comparison between two products with bullet points and pictures
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-comparison-{{ ai_gen_id }} {
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-comparison__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-product-comparison__heading-{{ ai_gen_id }} {
    text-align: center;
    margin: 0 0 40px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-product-comparison__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
  }

  .ai-product-comparison__product-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: 30px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .ai-product-comparison__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    margin-bottom: 20px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-product-comparison__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-product-comparison__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-product-comparison__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-product-comparison__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    margin: 0 0 10px;
    color: {{ block.settings.text_color }};
  }

  .ai-product-comparison__product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    font-weight: 600;
    margin-bottom: 20px;
    color: {{ block.settings.price_color }};
  }

  .ai-product-comparison__features-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0 0 20px;
  }

  .ai-product-comparison__feature-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    margin-bottom: 12px;
    font-size: {{ block.settings.feature_size }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-product-comparison__feature-icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    margin-top: 2px;
  }

  .ai-product-comparison__feature-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    fill: {{ block.settings.icon_color }};
  }

  .ai-product-comparison__button-{{ ai_gen_id }} {
    display: inline-block;
    width: 100%;
    padding: 14px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-align: center;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 16px;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .ai-product-comparison__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-product-comparison__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 20px;
    color: #999;
    font-style: italic;
  }

  @media screen and (max-width: 768px) {
    .ai-product-comparison__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .ai-product-comparison__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }
  }
{% endstyle %}

<div class="ai-product-comparison-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-comparison__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-product-comparison__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-product-comparison__grid-{{ ai_gen_id }}">
      {% for i in (1..2) %}
        {% liquid
          assign product_key = 'product_' | append: i
          assign feature_1_key = 'product_' | append: i | append: '_feature_1'
          assign feature_2_key = 'product_' | append: i | append: '_feature_2'
          assign feature_3_key = 'product_' | append: i | append: '_feature_3'
          assign feature_4_key = 'product_' | append: i | append: '_feature_4'
          assign feature_5_key = 'product_' | append: i | append: '_feature_5'

          assign product = block.settings[product_key]
          assign feature_1 = block.settings[feature_1_key]
          assign feature_2 = block.settings[feature_2_key]
          assign feature_3 = block.settings[feature_3_key]
          assign feature_4 = block.settings[feature_4_key]
          assign feature_5 = block.settings[feature_5_key]
        %}

        <div class="ai-product-comparison__product-{{ ai_gen_id }}">
          <div class="ai-product-comparison__image-wrapper-{{ ai_gen_id }}">
            {% if product != blank and product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.featured_image.alt | escape }}"
                class="ai-product-comparison__image-{{ ai_gen_id }}"
                loading="lazy"
                width="600"
                height="{{ 600 | divided_by: product.featured_image.aspect_ratio | round }}"
              >
            {% else %}
              <div class="ai-product-comparison__image-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>

          {% if product != blank %}
            <h3 class="ai-product-comparison__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
            <div class="ai-product-comparison__product-price-{{ ai_gen_id }}">
              {{ product.price | money }}
            </div>

            <ul class="ai-product-comparison__features-{{ ai_gen_id }}">
              {% if feature_1 != blank %}
                <li class="ai-product-comparison__feature-{{ ai_gen_id }}">
                  <span class="ai-product-comparison__feature-icon-{{ ai_gen_id }}">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                      <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
                    </svg>
                  </span>
                  <span>{{ feature_1 }}</span>
                </li>
              {% endif %}

              {% if feature_2 != blank %}
                <li class="ai-product-comparison__feature-{{ ai_gen_id }}">
                  <span class="ai-product-comparison__feature-icon-{{ ai_gen_id }}">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                      <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
                    </svg>
                  </span>
                  <span>{{ feature_2 }}</span>
                </li>
              {% endif %}

              {% if feature_3 != blank %}
                <li class="ai-product-comparison__feature-{{ ai_gen_id }}">
                  <span class="ai-product-comparison__feature-icon-{{ ai_gen_id }}">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                      <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
                    </svg>
                  </span>
                  <span>{{ feature_3 }}</span>
                </li>
              {% endif %}

              {% if feature_4 != blank %}
                <li class="ai-product-comparison__feature-{{ ai_gen_id }}">
                  <span class="ai-product-comparison__feature-icon-{{ ai_gen_id }}">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                      <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
                    </svg>
                  </span>
                  <span>{{ feature_4 }}</span>
                </li>
              {% endif %}

              {% if feature_5 != blank %}
                <li class="ai-product-comparison__feature-{{ ai_gen_id }}">
                  <span class="ai-product-comparison__feature-icon-{{ ai_gen_id }}">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                      <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
                    </svg>
                  </span>
                  <span>{{ feature_5 }}</span>
                </li>
              {% endif %}
            </ul>

            <a href="{{ product.url }}" class="ai-product-comparison__button-{{ ai_gen_id }}">
              {{ block.settings.button_text }}
            </a>
          {% else %}
            <div class="ai-product-comparison__empty-state-{{ ai_gen_id }}">
              Next, select a product to compare
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

