            <div class="ai-comparison-table__feature-label-{{ ai_gen_id }}">
              {{ feature_label }}
            </div>

            <div class="ai-comparison-table__feature-value-{{ ai_gen_id }}" data-product="Product A">
              {% if product_a_type == 'checkmark' %}
                <svg class="ai-comparison-table__checkmark-{{ ai_gen_id }}" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              {% elsif product_a_type == 'cross' %}
                <svg class="ai-comparison-table__checkmark-{{ ai_gen_id }}" viewBox="0 0 20 20" fill="currentColor" style="color: #999;">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
              {% else %}
                {{ product_a_text }}
              {% endif %}
            </div>

            <div class="ai-comparison-table__feature-value-{{ ai_gen_id }}" data-product="Product B">
              {% if product_b_type == 'checkmark' %}
                <svg class="ai-comparison-table__checkmark-{{ ai_gen_id }}" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              {% elsif product_b_type == 'cross' %}
                <svg class="ai-comparison-table__checkmark-{{ ai_gen_id }}" viewBox="0 0 20 20" fill="currentColor" style="color: #999;">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
              {% else %}
                {{ product_b_text }}
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

