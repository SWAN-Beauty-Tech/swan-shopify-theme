        {% endif %}
        {% if block.settings.show_buttons and block.settings.product_b_link != blank %}
          <a href="{{ block.settings.product_b_link }}" class="ai-comparison-table__product-button-{{ ai_gen_id }}">
            {{ block.settings.button_text_b }}
          </a>
        {% endif %}
      </div>
    </div>

    <div class="ai-comparison-table__features-{{ ai_gen_id }}">
      {% for i in (1..10) %}
        {% assign feature_label_key = 'feature_' | append: i | append: '_label' %}
        {% assign product_a_type_key = 'feature_' | append: i | append: '_product_a_type' %}
        {% assign product_a_text_key = 'feature_' | append: i | append: '_product_a_text' %}
        {% assign product_b_type_key = 'feature_' | append: i | append: '_product_b_type' %}
        {% assign product_b_text_key = 'feature_' | append: i | append: '_product_b_text' %}

        {% assign feature_label = block.settings[feature_label_key] %}
        {% assign product_a_type = block.settings[product_a_type_key] %}
        {% assign product_a_text = block.settings[product_a_text_key] %}
        {% assign product_b_type = block.settings[product_b_type_key] %}
        {% assign product_b_text = block.settings[product_b_text_key] %}

        {% if feature_label != blank %}
