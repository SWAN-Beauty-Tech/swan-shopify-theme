{% doc %}
  @prompt
    Just one small image, placed in the middle
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-centered-image-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
  }

  .ai-centered-image-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.image_width }}px;
    width: 100%;
  }

  .ai-centered-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-centered-image-placeholder-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .ai-centered-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-centered-image-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-centered-image-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px 16px {{ block.settings.padding_bottom | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-centered-image-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-centered-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 1200 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
      >
    {% else %}
      <div class="ai-centered-image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-centered-image-empty-state-{{ ai_gen_id }}">
          Add an image
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Centered image",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "image_width",
      "min": 100,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Image width",
      "default": 400
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Centered image"
    }
  ],
  "tag": null
}
{% endschema %}
