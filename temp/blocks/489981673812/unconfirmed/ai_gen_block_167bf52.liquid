{% doc %}
  @prompt
    Create a theme block that has 4 different sections. The sections are connected by a visual line that satrts at section 1 and ends at section 4. 
    
    
    Section 1: Headline and sublines on the left side, 1:1 Image on the right side. 
    
    Section 2: Headline and sublines on the right side. 9:16 video on the left side.
    
    Section 3: Headline and sublines on the left side. On the right side is a video that transitions it shape between the following formats 1:1, 4:5, 16:9, 9:16 in a repeating order (I will provide the same video in these 4 formats). Ad 4 upload fields in the backend. 
    
    Section 4: Headline and Subline on the right side. 16:9 image on the left side
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-connected-sections-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    position: relative;
    padding: 60px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-connected-sections__container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
  }

  .ai-connected-sections__line-{{ ai_gen_id }} {
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 2px;
    background-color: {{ block.settings.line_color }};
    transform: translateX(-50%);
    z-index: 1;
  }

  .ai-connected-sections__section-{{ ai_gen_id }} {
    position: relative;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    margin-bottom: 80px;
    z-index: 2;
  }

  .ai-connected-sections__section-{{ ai_gen_id }}:last-child {
    margin-bottom: 0;
  }

  .ai-connected-sections__content-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-connected-sections__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px 0;
    font-weight: 600;
  }

  .ai-connected-sections__subline-{{ ai_gen_id }} {
    font-size: {{ block.settings.subline_size }}px;
    color: {{ block.settings.subline_color }};
    line-height: 1.6;
  }

  .ai-connected-sections__media-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.media_border_radius }}px;
  }

  .ai-connected-sections__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .ai-connected-sections__video-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-connected-sections__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-connected-sections__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .ai-connected-sections__section-1-{{ ai_gen_id }} .ai-connected-sections__media-{{ ai_gen_id }} {
    aspect-ratio: 1 / 1;
  }

  .ai-connected-sections__section-2-{{ ai_gen_id }} .ai-connected-sections__media-{{ ai_gen_id }} {
    aspect-ratio: 9 / 16;
  }

  .ai-connected-sections__section-3-{{ ai_gen_id }} .ai-connected-sections__media-{{ ai_gen_id }} {
    aspect-ratio: 1 / 1;
  }

  .ai-connected-sections__section-4-{{ ai_gen_id }} .ai-connected-sections__media-{{ ai_gen_id }} {
    aspect-ratio: 16 / 9;
  }

  .ai-connected-sections__section-3-{{ ai_gen_id }} .ai-connected-sections__video-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media screen and (max-width: 768px) {
    .ai-connected-sections__line-{{ ai_gen_id }} {
      display: none;
    }

    .ai-connected-sections__section-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 30px;
      margin-bottom: 60px;
    }

    .ai-connected-sections__section-{{ ai_gen_id }} .ai-connected-sections__content-{{ ai_gen_id }} {
      order: 1;
    }

    .ai-connected-sections__section-{{ ai_gen_id }} .ai-connected-sections__media-{{ ai_gen_id }} {
      order: 2;
    }

    .ai-connected-sections__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-connected-sections__subline-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subline_size }}px * 0.9);
    }
  }
{% endstyle %}

<connected-sections-{{ ai_gen_id }} class="ai-connected-sections-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-connected-sections__container-{{ ai_gen_id }}">
    <div class="ai-connected-sections__line-{{ ai_gen_id }}"></div>

    <div class="ai-connected-sections__section-{{ ai_gen_id }} ai-connected-sections__section-1-{{ ai_gen_id }}">
      <div class="ai-connected-sections__content-{{ ai_gen_id }}">
        {% if block.settings.section_1_heading != blank %}
          <h2 class="ai-connected-sections__heading-{{ ai_gen_id }}">{{ block.settings.section_1_heading }}</h2>
        {% endif %}
        {% if block.settings.section_1_subline != blank %}
          <div class="ai-connected-sections__subline-{{ ai_gen_id }}">{{ block.settings.section_1_subline }}</div>
        {% endif %}
      </div>
      <div class="ai-connected-sections__media-{{ ai_gen_id }}">
        {% if block.settings.section_1_image %}
          <img
            src="{{ block.settings.section_1_image | image_url: width: 1000 }}"
            alt="{{ block.settings.section_1_image.alt | escape }}"
            class="ai-connected-sections__image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.section_1_image.width }}"
            height="{{ block.settings.section_1_image.height }}"
          >
        {% else %}
          <div class="ai-connected-sections__image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>

    <div class="ai-connected-sections__section-{{ ai_gen_id }} ai-connected-sections__section-2-{{ ai_gen_id }}">
      <div class="ai-connected-sections__media-{{ ai_gen_id }}">
        {% if block.settings.section_2_video %}
          <video
            class="ai-connected-sections__video-{{ ai_gen_id }}"
            autoplay
            muted
            loop
            playsinline
          >
            <source src="{{ block.settings.section_2_video }}" type="video/mp4">
          </video>
        {% else %}
          <div class="ai-connected-sections__image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
      <div class="ai-connected-sections__content-{{ ai_gen_id }}">
        {% if block.settings.section_2_heading != blank %}
          <h2 class="ai-connected-sections__heading-{{ ai_gen_id }}">{{ block.settings.section_2_heading }}</h2>
        {% endif %}
        {% if block.settings.section_2_subline != blank %}
          <div class="ai-connected-sections__subline-{{ ai_gen_id }}">{{ block.settings.section_2_subline }}</div>
        {% endif %}
      </div>
    </div>

    <div class="ai-connected-sections__section-{{ ai_gen_id }} ai-connected-sections__section-3-{{ ai_gen_id }}">
      <div class="ai-connected-sections__content-{{ ai_gen_id }}">
        {% if block.settings.section_3_heading != blank %}
          <h2 class="ai-connected-sections__heading-{{ ai_gen_id }}">{{ block.settings.section_3_heading }}</h2>
        {% endif %}
        {% if block.settings.section_3_subline != blank %}
          <div class="ai-connected-sections__subline-{{ ai_gen_id }}">{{ block.settings.section_3_subline }}</div>
        {% endif %}
      </div>
      <div class="ai-connected-sections__media-{{ ai_gen_id }}" data-video-container>
        {% if block.settings.section_3_video_1_1 or block.settings.section_3_video_4_5 or block.settings.section_3_video_16_9 or block.settings.section_3_video_9_16 %}
          <video
            class="ai-connected-sections__video-{{ ai_gen_id }}"
            autoplay
            muted
            loop
            playsinline
            data-morphing-video
          >
            {% if block.settings.section_3_video_1_1 %}
              <source src="{{ block.settings.section_3_video_1_1 }}" type="video/mp4" data-ratio="1-1">
            {% endif %}
          </video>
        {% else %}
          <div class="ai-connected-sections__image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>

    <div class="ai-connected-sections__section-{{ ai_gen_id }} ai-connected-sections__section-4-{{ ai_gen_id }}">
      <div class="ai-connected-sections__media-{{ ai_gen_id }}">
        {% if block.settings.section_4_image %}
          <img
            src="{{ block.settings.section_4_image | image_url: width: 1000 }}"
            alt="{{ block.settings.section_4_image.alt | escape }}"
            class="ai-connected-sections__image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.section_4_image.width }}"
            height="{{ block.settings.section_4_image.height }}"
          >
        {% else %}
          <div class="ai-connected-sections__image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
      <div class="ai-connected-sections__content-{{ ai_gen_id }}">
        {% if block.settings.section_4_heading != blank %}
          <h2 class="ai-connected-sections__heading-{{ ai_gen_id }}">{{ block.settings.section_4_heading }}</h2>
        {% endif %}
        {% if block.settings.section_4_subline != blank %}
          <div class="ai-connected-sections__subline-{{ ai_gen_id }}">{{ block.settings.section_4_subline }}</div>
        {% endif %}
      </div>
    </div>
  </div>
</connected-sections-{{ ai_gen_id }}>

<script>
  (function() {
    class ConnectedSections{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.videoContainer = this.querySelector('[data-video-container]');
        this.video = this.querySelector('[data-morphing-video]');
        this.videos = [
          '{{ block.settings.section_3_video_1_1 }}',
          '{{ block.settings.section_3_video_4_5 }}',
          '{{ block.settings.section_3_video_16_9 }}',
          '{{ block.settings.section_3_video_9_16 }}'
        ].filter(v => v);
        this.aspectRatios = ['1 / 1', '4 / 5', '16 / 9', '9 / 16'];
        this.currentIndex = 0;
        this.transitionDuration = {{ block.settings.transition_duration }};
      }

      connectedCallback() {
        if (this.video && this.videos.length > 1) {
          this.startMorphing();
        }
      }

      startMorphing() {
        setInterval(() => {
          this.currentIndex = (this.currentIndex + 1) % this.videos.length;
          this.morphVideo();
        }, this.transitionDuration * 1000);
      }

      morphVideo() {
        if (!this.videoContainer || !this.video) return;

        this.videoContainer.style.transition = 'aspect-ratio 1s ease-in-out';
        this.videoContainer.style.aspectRatio = this.aspectRatios[this.currentIndex];

        const currentTime = this.video.currentTime;
        this.video.src = this.videos[this.currentIndex];
        this.video.currentTime = currentTime;
        this.video.play();
      }

      disconnectedCallback() {
        if (this.morphInterval) {
          clearInterval(this.morphInterval);
        }
      }
    }

    customElements.define('connected-sections-{{ ai_gen_id }}', ConnectedSections{{ ai_gen_id }});
  })();
</script>

