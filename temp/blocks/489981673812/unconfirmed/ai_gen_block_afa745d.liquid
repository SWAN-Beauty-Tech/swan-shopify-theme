      <div class="ai-connected-sections__content-{{ ai_gen_id }}">
        {% if block.settings.section_1_headline != blank %}
          <h2 class="ai-connected-sections__headline-{{ ai_gen_id }}">{{ block.settings.section_1_headline }}</h2>
        {% endif %}
        {% if block.settings.section_1_subline != blank %}
          <div class="ai-connected-sections__subline-{{ ai_gen_id }}">{{ block.settings.section_1_subline }}</div>
        {% endif %}
      </div>
      <div class="ai-connected-sections__media-{{ ai_gen_id }}">
        {% if block.settings.section_1_image %}
          <img
            src="{{ block.settings.section_1_image | image_url: width: 1000 }}"
            alt="{{ block.settings.section_1_image.alt | escape }}"
            class="ai-connected-sections__image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.section_1_image.width }}"
            height="{{ block.settings.section_1_image.height }}"
          >
        {% else %}
          <div class="ai-connected-sections__image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
      <div class="ai-connected-sections__connector-{{ ai_gen_id }}"></div>
    </div>

    <div class="ai-connected-sections__section-{{ ai_gen_id }} ai-connected-sections__section-2-{{ ai_gen_id }}">
      <div class="ai-connected-sections__media-{{ ai_gen_id }}">
        {% if block.settings.section_2_video %}
          <video
            class="ai-connected-sections__video-{{ ai_gen_id }}"
            autoplay
            muted
            loop
            playsinline
          >
            <source src="{{ block.settings.section_2_video }}" type="video/mp4">
          </video>
        {% else %}
          <div class="ai-connected-sections__image-placeholder-{{ ai_gen_id }}" style="aspect-ratio: 9 / 16;">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
      <div class="ai-connected-sections__content-{{ ai_gen_id }}">
        {% if block.settings.section_2_headline != blank %}
          <h2 class="ai-connected-sections__headline-{{ ai_gen_id }}">{{ block.settings.section_2_headline }}</h2>
        {% endif %}
        {% if block.settings.section_2_subline != blank %}
          <div class="ai-connected-sections__subline-{{ ai_gen_id }}">{{ block.settings.section_2_subline }}</div>
        {% endif %}
      </div>
      <div class="ai-connected-sections__connector-{{ ai_gen_id }}"></div>
    </div>

    <div class="ai-connected-sections__section-{{ ai_gen_id }} ai-connected-sections__section-3-{{ ai_gen_id }}">
      <div class="ai-connected-sections__content-{{ ai_gen_id }}">
        {% if block.settings.section_3_headline != blank %}
          <h2 class="ai-connected-sections__headline-{{ ai_gen_id }}">{{ block.settings.section_3_headline }}</h2>
        {% endif %}
        {% if block.settings.section_3_subline != blank %}
          <div class="ai-connected-sections__subline-{{ ai_gen_id }}">{{ block.settings.section_3_subline }}</div>
        {% endif %}
      </div>
      <div class="ai-connected-sections__media-{{ ai_gen_id }}">
        <div class="ai-connected-sections__animated-video-{{ ai_gen_id }}" data-animation-speed="{{ block.settings.animation_speed }}">
          {% if block.settings.section_3_video_1_1 %}
            <video
              class="ai-connected-sections__video-format-{{ ai_gen_id }} active"
              data-format="1-1"
              muted
              playsinline
              style="aspect-ratio: 1 / 1;"
            >
              <source src="{{ block.settings.section_3_video_1_1 }}" type="video/mp4">
            </video>
          {% endif %}
          {% if block.settings.section_3_video_4_5 %}
            <video
              class="ai-connected-sections__video-format-{{ ai_gen_id }}"
              data-format="4-5"
              muted
              playsinline
              style="aspect-ratio: 4 / 5;"
            >
              <source src="{{ block.settings.section_3_video_4_5 }}" type="video/mp4">
            </video>
          {% endif %}
          {% if block.settings.section_3_video_16_9 %}
            <video
              class="ai-connected-sections__video-format-{{ ai_gen_id }}"
              data-format="16-9"
              muted
              playsinline
              style="aspect-ratio: 16 / 9;"
            >
              <source src="{{ block.settings.section_3_video_16_9 }}" type="video/mp4">
            </video>
          {% endif %}
          {% if block.settings.section_3_video_9_16 %}
            <video
              class="ai-connected-sections__video-format-{{ ai_gen_id }}"
              data-format="9-16"
              muted
              playsinline
              style="aspect-ratio: 9 / 16;"
            >
              <source src="{{ block.settings.section_3_video_9_16 }}" type="video/mp4">
            </video>
          {% endif %}
          {% if block.settings.section_3_video_1_1 == blank and block.settings.section_3_video_4_5 == blank and block.settings.section_3_video_16_9 == blank and block.settings.section_3_video_9_16 == blank %}
            <div class="ai-connected-sections__image-placeholder-{{ ai_gen_id }}" style="aspect-ratio: 1 / 1;">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
      </div>
      <div class="ai-connected-sections__connector-{{ ai_gen_id }}"></div>
    </div>

    <div class="ai-connected-sections__section-{{ ai_gen_id }} ai-connected-sections__section-4-{{ ai_gen_id }}">
      <div class="ai-connected-sections__media-{{ ai_gen_id }}">
        {% if block.settings.section_4_image %}
          <img
            src="{{ block.settings.section_4_image | image_url: width: 1200 }}"
            alt="{{ block.settings.section_4_image.alt | escape }}"
            class="ai-connected-sections__image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.section_4_image.width }}"
            height="{{ block.settings.section_4_image.height }}"
          >
        {% else %}
          <div class="ai-connected-sections__image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
      <div class="ai-connected-sections__content-{{ ai_gen_id }}">
        {% if block.settings.section_4_headline != blank %}
          <h2 class="ai-connected-sections__headline-{{ ai_gen_id }}">{{ block.settings.section_4_headline }}</h2>
        {% endif %}
        {% if block.settings.section_4_subline != blank %}
          <div class="ai-connected-sections__subline-{{ ai_gen_id }}">{{ block.settings.section_4_subline }}</div>
        {% endif %}
      </div>
    </div>

  </div>
</connected-sections-{{ ai_gen_id }}>

<script>
  (function() {
    class ConnectedSections{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.animatedVideoContainer = this.querySelector('.ai-connected-sections__animated-video-{{ ai_gen_id }}');
        this.currentIndex = 0;
        this.videos = [];
        this.animationInterval = null;
      }

      connectedCallback() {
        if (this.animatedVideoContainer) {
          this.videos = Array.from(this.animatedVideoContainer.querySelectorAll('.ai-connected-sections__video-format-{{ ai_gen_id }}'));
          
          if (this.videos.length > 0) {
            const speed = parseInt(this.animatedVideoContainer.dataset.animationSpeed) || 3000;
            this.startAnimation(speed);
          }
        }
      }

      disconnectedCallback() {
        if (this.animationInterval) {
          clearInterval(this.animationInterval);
        }
        this.videos.forEach(video => {
          video.pause();
        });
      }

      async startAnimation(speed) {
        if (this.videos.length === 0) return;

        await this.playCurrentVideo();

        this.animationInterval = setInterval(async () => {
          this.videos[this.currentIndex].classList.remove('active');
          this.videos[this.currentIndex].pause();
          this.videos[this.currentIndex].currentTime = 0;

          this.currentIndex = (this.currentIndex + 1) % this.videos.length;

          this.videos[this.currentIndex].classList.add('active');
          await this.playCurrentVideo();
        }, speed);
      }

      async playCurrentVideo() {
        const video = this.videos[this.currentIndex];
        if (video) {
          try {
            await video.play();
          } catch (error) {
            console.log('Video autoplay prevented');
          }
        }
      }
    }

    customElements.define('connected-sections-{{ ai_gen_id }}', ConnectedSections{{ ai_gen_id }});
  })();
</script>

