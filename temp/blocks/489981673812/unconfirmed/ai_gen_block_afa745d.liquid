{% doc %}
  @prompt
    Create a theme block that has 4 different sections that are connect by a line. 
    
    Section 1: Headline and sublines on the left side, 1:1 Image on the right side. 
    
    Section 2: Headline and sublines on the right side. 9:16 video on the left side.
    
    Section 3: Headline and sublines on the left side Video with responive design animation that changes into the following format from 1:1 to 4:5 to 16:9 to 9:16 in a repeating loop on the right side. (I will provide the same video in these 4 formats).
    
    Section 4: Headline and Subline on the right side. 16:9 image on the left side.
    
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-connected-sections-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_spacing }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-connected-sections__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    position: relative;
  }

  .ai-connected-sections__section-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.content_gap }}px;
    align-items: center;
    margin-bottom: {{ block.settings.section_spacing }}px;
    position: relative;
  }

  .ai-connected-sections__section-{{ ai_gen_id }}:last-child {
    margin-bottom: 0;
  }

  .ai-connected-sections__connector-{{ ai_gen_id }} {
    position: absolute;
    left: 50%;
    bottom: -{{ block.settings.section_spacing }}px;
    transform: translateX(-50%);
    width: {{ block.settings.line_thickness }}px;
    height: {{ block.settings.section_spacing }}px;
    background-color: {{ block.settings.line_color }};
    z-index: 1;
  }

  .ai-connected-sections__section-{{ ai_gen_id }}:last-child .ai-connected-sections__connector-{{ ai_gen_id }} {
    display: none;
  }

  .ai-connected-sections__content-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-connected-sections__headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_size }}px;
    color: {{ block.settings.headline_color }};
    margin: 0 0 16px 0;
    line-height: 1.2;
  }

  .ai-connected-sections__subline-{{ ai_gen_id }} {
    font-size: {{ block.settings.subline_size }}px;
    color: {{ block.settings.subline_color }};
    line-height: 1.6;
    margin: 0;
  }

  .ai-connected-sections__media-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.media_border_radius }}px;
  }

  .ai-connected-sections__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .ai-connected-sections__video-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-connected-sections__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-connected-sections__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .ai-connected-sections__section-1-{{ ai_gen_id }} .ai-connected-sections__media-{{ ai_gen_id }} {
    aspect-ratio: 1 / 1;
  }

  .ai-connected-sections__section-2-{{ ai_gen_id }} .ai-connected-sections__media-{{ ai_gen_id }} {
    aspect-ratio: 9 / 16;
  }

  .ai-connected-sections__section-4-{{ ai_gen_id }} .ai-connected-sections__media-{{ ai_gen_id }} {
    aspect-ratio: 16 / 9;
  }

  .ai-connected-sections__animated-video-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .ai-connected-sections__animated-video-{{ ai_gen_id }} video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .ai-connected-sections__animated-video-{{ ai_gen_id }} video.active {
    opacity: 1;
  }

  @media screen and (max-width: 768px) {
    .ai-connected-sections__section-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .ai-connected-sections__section-{{ ai_gen_id }} .ai-connected-sections__content-{{ ai_gen_id }} {
      order: 1;
    }

    .ai-connected-sections__section-{{ ai_gen_id }} .ai-connected-sections__media-{{ ai_gen_id }} {
      order: 2;
    }

    .ai-connected-sections__headline-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.headline_size }}px * 0.8);
    }

    .ai-connected-sections__subline-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subline_size }}px * 0.9);
    }
  }
{% endstyle %}

<connected-sections-{{ ai_gen_id }} class="ai-connected-sections-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-connected-sections__container-{{ ai_gen_id }}">
    
