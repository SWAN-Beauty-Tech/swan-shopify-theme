{% doc %}
  @prompt
    Generate a banner section where 10 different curated brands are shown and slowly sliding from right to left through the screen. 
    I would like to have the possibility to upload 10 different brand icons and chose the logo sizes ., The carusel should be endless, meaning that when the last brand is shown, the first one appears again, Start again - create an endless scrolling of 10 icons of brands, which are sliding from right to left

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-brand-carousel-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-brand-carousel-track-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.logo_spacing }}px;
    animation: ai-brand-carousel-scroll-{{ ai_gen_id }} {{ block.settings.animation_speed }}s linear infinite;
  }

  .ai-brand-carousel-item-{{ ai_gen_id }} {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.logo_size }}px;
    height: {{ block.settings.logo_size }}px;
  }

  .ai-brand-carousel-item-{{ ai_gen_id }} img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    filter: grayscale({{ block.settings.grayscale_amount }}%);opacity: {{ block.settings.logo_opacity | divided_by: 100.0 }};
    transition: filter 0.3s ease, opacity 0.3s ease;
  }

  .ai-brand-carousel-item-{{ ai_gen_id }}:hover img {
    filter: grayscale(0%);
    opacity: 1;
  }

  .ai-brand-carousel-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.logo_size }}px;
    height: {{ block.settings.logo_size }}px;
    background-color: #f4f4f4;
    border: 2px dashed #cccccc;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-brand-carousel-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.5;
  }

  .ai-brand-carousel-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: -25px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
    white-space: nowrap;
    pointer-events: none;
  }

  @keyframes ai-brand-carousel-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-50% - {{ block.settings.logo_spacing | divided_by: 2 }}px));
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .ai-brand-carousel-track-{{ ai_gen_id }} {
      animation: none;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-brand-carousel-item-{{ ai_gen_id }} {
      width: {{ block.settings.logo_size | times: 0.8 }}px;
      height: {{ block.settings.logo_size | times: 0.8 }}px;
    }

    .ai-brand-carousel-placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.logo_size | times: 0.8 }}px;
      height: {{ block.settings.logo_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<brand-carousel-{{ ai_gen_id }}
  class="ai-brand-carousel-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-brand-carousel-track-{{ ai_gen_id }}">
    {% liquid
      assign has_logos = false
      for i in (1..10)
        assign logo_key = 'brand_logo_' | append: i
        assign logo = block.settings[logo_key]
        if logo != blank
          assign has_logos = true
          break
        endif
      endfor
    %}

    {% for duplicate in (1..2) %}
      {% if has_logos %}
        {% for i in (1..10) %}
          {% liquid
            assign logo_key = 'brand_logo_' | append: i
            assign logo = block.settings[logo_key]
          %}
          {% if logo != blank %}
            <div class="ai-brand-carousel-item-{{ ai_gen_id }}">
              <img
                src="{{ logo | image_url: width: 400 }}"
                alt="{{ logo.alt | escape }}"
                loading="lazy"
                width="{{ block.settings.logo_size }}"
                height="{{ block.settings.logo_size }}"
              >
            </div>
          {% else %}
            <div class="ai-brand-carousel-item-{{ ai_gen_id }}">
              <div class="ai-brand-carousel-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}<div class="ai-brand-carousel-empty-state-{{ ai_gen_id }}">
                  Brand {{ i }}
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      {% else %}
        {% for i in (1..10) %}
          <div class="ai-brand-carousel-item-{{ ai_gen_id }}">
            <div class="ai-brand-carousel-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
              <div class="ai-brand-carousel-empty-state-{{ ai_gen_id }}">
                Brand {{ i }}
              </div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    {% endfor %}
  </div>
</brand-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class BrandCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-brand-carousel-track-{{ ai_gen_id }}');
        this.setupInfiniteScroll();
      }

      setupInfiniteScroll() {
        if (!this.track) return;
        
        const items = this.track.children;
        if (items.length === 0) return;

        const totalWidth = Array.from(items).reduce((width, item) => {
          return width + item.offsetWidth + {{ block.settings.logo_spacing }};
        }, 0);

        this.track.style.width = `${totalWidth * 2}px`;
      }
    }

    customElements.define('brand-carousel-{{ ai_gen_id }}', BrandCarousel{{ ai_gen_id }});
  })();
</script>

