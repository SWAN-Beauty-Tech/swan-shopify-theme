<testimonial-slider-{{ ai_gen_id }}
  class="block_container ai-testimonial-slider-{{ ai_gen_id }}"
  data-autoplay="{{ section.settings.autoplay_enabled }}"
  data-autoplay-delay="{{ section.settings.autoplay_delay }}"
  {{ section.shopify_attributes }}
>
  <div class="ai-testimonial-slider__container-{{ ai_gen_id }}">
    {% for i in (1..8) %}
      {% liquid
        assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
        assign statistic_key = 'slide_' | append: i | append: '_statistic'
        assign subheading_key = 'slide_' | append: i | append: '_subheading'
        assign quote_key = 'slide_' | append: i | append: '_quote'
        assign author_name_key = 'slide_' | append: i | append: '_author_name'
        assign author_role_key = 'slide_' | append: i | append: '_author_role'
        assign author_photo_key = 'slide_' | append: i | append: '_author_photo'
        assign cta_text_key = 'slide_' | append: i | append: '_cta_text'
        assign cta_link_key = 'slide_' | append: i | append: '_cta_link'
        assign image_key = 'slide_' | append: i | append: '_image'
        assign tab_label_key = 'slide_' | append: i | append: '_tab_label'
        assign tab_logo_key = 'slide_' | append: i | append: '_tab_logo'

        assign slide_enabled = section.settings[slide_enabled_key]
        assign statistic = section.settings[statistic_key]
        assign subheading = section.settings[subheading_key]
        assign quote = section.settings[quote_key]
        assign author_name = section.settings[author_name_key]
        assign author_role = section.settings[author_role_key]
        assign author_photo = section.settings[author_photo_key]
        assign cta_text = section.settings[cta_text_key]
        assign cta_link = section.settings[cta_link_key]
        assign image = section.settings[image_key]
        assign tab_label = section.settings[tab_label_key]
        assign tab_logo = section.settings[tab_logo_key]
      %}

      {% if slide_enabled %}
        <div
          class="ai-testimonial-slider__slide-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
          data-slide="{{ forloop.index0 }}"
        >
          <div class="ai-testimonial-slider__content-{{ ai_gen_id }}">
            {% if statistic != blank %}
              <p class="ai-testimonial-slider__statistic-{{ ai_gen_id }}">{{ statistic }}</p>
            {% endif %}

            {% if subheading != blank %}
              <p class="ai-testimonial-slider__subheading-{{ ai_gen_id }}">{{ subheading }}</p>
            {% endif %}

            {% if quote != blank %}
              <p class="ai-testimonial-slider__quote-{{ ai_gen_id }}">"{{ quote }}"</p>
            {% endif %}
            <div class="author-cta">
              {% if author_name != blank or author_role != blank %}
                <div class="ai-testimonial-slider__author-{{ ai_gen_id }}">
                  <div class="ai-testimonial-slider__author-photo-{{ ai_gen_id }}">
                    {% if author_photo %}
                      <img
                        src="{{ author_photo | image_url: width: 120}}"
                        alt="{{ author_photo.alt | escape }}"
                        width="60"
                        height="60"
                        loading="lazy"
                      >
                    {% else %}
                      <div class="ai-testimonial-slider__author-photo-placeholder-{{ ai_gen_id }}">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                        </svg>
                      </div>
                    {% endif %}
                  </div>
                  <div class="ai-testimonial-slider__author-info-{{ ai_gen_id }}">
                    {% if author_name != blank %}
                      <p class="ai-testimonial-slider__author-name-{{ ai_gen_id }}">{{ author_name }}</p>
                    {% endif %}
                    {% if author_role != blank %}
                      <p class="ai-testimonial-slider__author-role-{{ ai_gen_id }}">{{ author_role }}</p>
                    {% endif %}
                  </div>
                </div>
              {% endif %}

              {% if cta_text != blank and cta_link != blank %}
                <a href="{{ cta_link }}" class="ai-testimonial-slider__cta-{{ ai_gen_id }}">
                  {{ cta_text }}
                  <svg
                    class="ai-testimonial-slider__cta-arrow-{{ ai_gen_id }}"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                  </svg>
                </a>
              {% endif %}
            </div>
          </div>

          <div class="ai-testimonial-slider__image-{{ ai_gen_id }}">
            {% if image %}
              <img
                src="{{ image | image_url: width: 800 }}"
                alt="{{ image.alt | escape }}"
                width="{{ image.width }}"
                height="{{ image.height }}"
                loading="lazy"
              >
            {% else %}
              <div class="ai-testimonial-slider__image-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor -%}
    <button
      class="ai-testimonial-slider__nav-{{ ai_gen_id }} ai-testimonial-slider__nav-{{ ai_gen_id }}--prev"
      aria-label="Previous slide"
    >
      <svg
        class="ai-testimonial-slider__nav-icon-{{ ai_gen_id }}"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
      >
        <path d="M15 18l-6-6 6-6"/>
      </svg>
    </button>

    <button
      class="ai-testimonial-slider__nav-{{ ai_gen_id }} ai-testimonial-slider__nav-{{ ai_gen_id }}--next"
      aria-label="Next slide"
    >
      <svg
        class="ai-testimonial-slider__nav-icon-{{ ai_gen_id }}"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
      >
        <path d="M9 18l6-6-6-6"/>
      </svg>
    </button>
  </div>

  <div class="ai-testimonial-slider__tabs-{{ ai_gen_id }}">
    {% assign tab_index = 0 %}
    {% for i in (1..8) %}
      {% liquid
        assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
        assign tab_label_key = 'slide_' | append: i | append: '_tab_label'
        assign tab_logo_key = 'slide_' | append: i | append: '_tab_logo'
        assign slide_enabled = section.settings[slide_enabled_key]
        assign tab_label = section.settings[tab_label_key]
        assign tab_logo = section.settings[tab_logo_key]
      %}

      {% if slide_enabled %}
        <div
          class="ai-testimonial-slider__tab-{{ ai_gen_id }} {% if tab_index == 0 %}active{% endif %}"
          data-slide="{{ tab_index }}"
          role="button"
          tabindex="0"
          aria-label="Go to slide {{ tab_index | plus: 1 }}"
        >
          <div class="ai-testimonial-slider__tab-logo-{{ ai_gen_id }}">
            {% if tab_logo %}
              <img
                src="{{ tab_logo | image_url: width: 80 }}"
                alt="{{ tab_logo.alt | escape }}"
                width="40"
                height="40"
                loading="lazy"
              >
            {% else %}
              <div class="ai-testimonial-slider__tab-logo-placeholder-{{ ai_gen_id }}">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              </div>
            {% endif %}
          </div>
          <div class="ai-testimonial-slider__tab-text-{{ ai_gen_id }}">
            {% if tab_label != blank %}
              {{ tab_label }}
            {% else %}
              Company {{ tab_index | plus: 1 }}
            {% endif %}
          </div>
        </div>
        {% assign tab_index = tab_index | plus: 1 %}
      {% endif %}
    {% endfor %}
  </div>
</testimonial-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class TestimonialSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.slides = [];
        this.tabs = [];
        this.autoplayTimer = null;
        this.isHovered = false;
      }

      connectedCallback() {
        this.slides = Array.from(this.querySelectorAll('.ai-testimonial-slider__slide-{{ ai_gen_id }}'));
        this.tabs = Array.from(this.querySelectorAll('.ai-testimonial-slider__tab-{{ ai_gen_id }}'));
        this.prevButton = this.querySelector('.ai-testimonial-slider__nav-{{ ai_gen_id }}--prev');
        this.nextButton = this.querySelector('.ai-testimonial-slider__nav-{{ ai_gen_id }}--next');

        this.autoplayEnabled = this.dataset.autoplay === 'true';
        this.autoplayDelay = parseInt(this.dataset.autoplayDelay) * 1000;

        this.setupEventListeners();
        this.startAutoplay();
      }

      setupEventListeners() {
        this.prevButton.addEventListener('click', () => this.prevSlide());
        this.nextButton.addEventListener('click', () => this.nextSlide());

        this.tabs.forEach((tab, index) => {
          tab.addEventListener('click', () => this.goToSlide(index));
          tab.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' || e.key === ' ') {
              e.preventDefault();
              this.goToSlide(index);
            }
          });
        });

        this.addEventListener('mouseenter', () => {
          this.isHovered = true;
          this.stopAutoplay();
        });

        this.addEventListener('mouseleave', () => {
          this.isHovered = false;
          this.startAutoplay();
        });
      }

      goToSlide(index) {
        if (index === this.currentSlide || index >= this.slides.length) return;

        this.slides[this.currentSlide].classList.remove('active');
        this.tabs[this.currentSlide].classList.remove('active');

        this.currentSlide = index;

        this.slides[this.currentSlide].classList.add('active');
        this.tabs[this.currentSlide].classList.add('active');
      }

      nextSlide() {
        const nextIndex = (this.currentSlide + 1) % this.slides.length;
        this.goToSlide(nextIndex);
      }

      prevSlide() {
        const prevIndex = (this.currentSlide - 1 + this.slides.length) % this.slides.length;
        this.goToSlide(prevIndex);
      }

      startAutoplay() {
        if (!this.autoplayEnabled || this.isHovered || this.slides.length <= 1) return;

        this.stopAutoplay();
        this.autoplayTimer = setInterval(() => {
          this.nextSlide();
        }, this.autoplayDelay);
      }

      stopAutoplay() {
        if (this.autoplayTimer) {
          clearInterval(this.autoplayTimer);
          this.autoplayTimer = null;
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('testimonial-slider-{{ ai_gen_id }}', TestimonialSlider{{ ai_gen_id }});
  })();
</script>

