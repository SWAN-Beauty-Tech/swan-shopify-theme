{% javascript %}
  const headline = document.querySelectorAll('.banner__content h2');

  headline.forEach((h2) => {
    setTimeout(() => {
      gsap.to(h2, {
        autoAlpha: 0,
        scale: 1.05,
        duration: 2,
        ease: 'power1.inOut',
      });
    }, 3000);
  });
{% endjavascript %}
